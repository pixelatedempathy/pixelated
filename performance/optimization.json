{
  "performance_optimization": {
    "name": "pixelated-empathy-performance",
    "version": "1.0.0",
    "last_updated": "2024-01-01T00:00:00Z",
    
    "application_optimization": {
      "node_js": {
        "memory_management": {
          "max_old_space_size": "2048",
          "max_semi_space_size": "128",
          "gc_optimization": true,
          "memory_monitoring": true
        },
        "event_loop": {
          "monitoring": true,
          "lag_threshold_ms": 100,
          "blocking_detection": true
        },
        "clustering": {
          "enabled": true,
          "workers": "auto",
          "restart_policy": "exponential_backoff"
        }
      },
      "database": {
        "connection_pooling": {
          "min_connections": 5,
          "max_connections": 50,
          "idle_timeout": 30000,
          "connection_timeout": 5000
        },
        "query_optimization": {
          "slow_query_threshold": 1000,
          "query_caching": true,
          "prepared_statements": true,
          "connection_reuse": true
        },
        "indexing": {
          "auto_analyze": true,
          "index_monitoring": true,
          "unused_index_detection": true
        }
      },
      "caching": {
        "redis": {
          "memory_policy": "allkeys-lru",
          "max_memory": "1gb",
          "persistence": "rdb",
          "compression": true
        },
        "application_cache": {
          "ttl_default": 300,
          "max_size": "256mb",
          "strategy": "lru",
          "compression": true
        },
        "cdn": {
          "enabled": true,
          "provider": "cloudflare",
          "cache_headers": true,
          "static_asset_caching": true
        }
      }
    },
    
    "infrastructure_optimization": {
      "load_balancing": {
        "algorithm": "least_connections",
        "health_checks": {
          "interval": 10,
          "timeout": 5,
          "retries": 3
        },
        "session_affinity": false,
        "connection_draining": true
      },
      "auto_scaling": {
        "metrics": [
          {
            "name": "cpu_utilization",
            "target": 70,
            "scale_up_threshold": 80,
            "scale_down_threshold": 30
          },
          {
            "name": "memory_utilization", 
            "target": 75,
            "scale_up_threshold": 85,
            "scale_down_threshold": 40
          },
          {
            "name": "request_rate",
            "target": 1000,
            "scale_up_threshold": 1500,
            "scale_down_threshold": 500
          }
        ],
        "min_replicas": 3,
        "max_replicas": 20,
        "scale_up_cooldown": 300,
        "scale_down_cooldown": 600
      },
      "resource_limits": {
        "cpu_request": "250m",
        "cpu_limit": "1000m",
        "memory_request": "512Mi",
        "memory_limit": "2Gi",
        "ephemeral_storage": "1Gi"
      }
    },
    
    "network_optimization": {
      "compression": {
        "gzip": true,
        "brotli": true,
        "compression_level": 6,
        "min_size": 1024
      },
      "http2": {
        "enabled": true,
        "server_push": false,
        "max_concurrent_streams": 100
      },
      "keep_alive": {
        "enabled": true,
        "timeout": 65,
        "max_requests": 100
      },
      "connection_pooling": {
        "enabled": true,
        "max_sockets": 50,
        "max_free_sockets": 10,
        "timeout": 60000
      }
    },
    
    "monitoring_optimization": {
      "metrics_collection": {
        "interval": 15,
        "retention": "30d",
        "compression": true,
        "sampling_rate": 1.0
      },
      "alerting": {
        "response_time_threshold": 2000,
        "error_rate_threshold": 0.01,
        "availability_threshold": 0.999,
        "memory_threshold": 0.85,
        "cpu_threshold": 0.80
      },
      "logging": {
        "level": "info",
        "structured": true,
        "sampling": false,
        "async": true,
        "buffer_size": 1000
      }
    },
    
    "security_optimization": {
      "rate_limiting": {
        "global": {
          "requests_per_minute": 1000,
          "burst": 2000
        },
        "per_ip": {
          "requests_per_minute": 60,
          "burst": 120
        },
        "api_endpoints": {
          "requests_per_minute": 100,
          "burst": 200
        }
      },
      "ddos_protection": {
        "enabled": true,
        "threshold": 10000,
        "block_duration": 3600
      },
      "ssl_optimization": {
        "protocols": ["TLSv1.2", "TLSv1.3"],
        "ciphers": "ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512",
        "session_cache": "shared:SSL:10m",
        "session_timeout": "10m",
        "ocsp_stapling": true
      }
    },
    
    "content_optimization": {
      "static_assets": {
        "minification": true,
        "compression": true,
        "versioning": true,
        "cdn_distribution": true
      },
      "images": {
        "optimization": true,
        "webp_conversion": true,
        "lazy_loading": true,
        "responsive_images": true
      },
      "fonts": {
        "preload": true,
        "font_display": "swap",
        "subset": true,
        "compression": true
      }
    },
    
    "performance_budgets": {
      "page_load_time": {
        "target": 2000,
        "budget": 3000
      },
      "first_contentful_paint": {
        "target": 1500,
        "budget": 2000
      },
      "largest_contentful_paint": {
        "target": 2500,
        "budget": 3000
      },
      "cumulative_layout_shift": {
        "target": 0.1,
        "budget": 0.25
      },
      "first_input_delay": {
        "target": 100,
        "budget": 300
      }
    }
  }
}
