---
import BaseLayout from '../layouts/BaseLayout.astro'
import { MindMirrorDemo } from '../components/MindMirrorDemo'
---

<BaseLayout title="Mind Mirror Demo - Pixelated Empathy">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
    <!-- Header Section -->
    <div class="container mx-auto px-4 py-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          ðŸ§  Mind Mirror Interface
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Experience our enhanced mental health chat interface inspired by
          cutting-edge UI/UX patterns. Features real-time psychological
          analysis, 3D brain visualization, and archetype detection.
        </p>
      </div>

      <!-- Feature Highlights -->
      <div class="grid md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white rounded-lg p-6 shadow-lg border-0">
          <div
            class="w-12 h-12 bg-gradient-to-r from-purple-500 to-blue-600 rounded-lg flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            Real-time Analysis
          </h3>
          <p class="text-gray-600 text-sm">
            Instant psychological insights with archetype detection and mood
            vector analysis
          </p>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-lg border-0">
          <div
            class="w-12 h-12 bg-gradient-to-r from-green-500 to-teal-600 rounded-lg flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            3D Brain Visualization
          </h3>
          <p class="text-gray-600 text-sm">
            Interactive neural activity mapping with real-time brain region
            analysis
          </p>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-lg border-0">
          <div
            class="w-12 h-12 bg-gradient-to-r from-orange-500 to-red-600 rounded-lg flex items-center justify-center mb-4"
          >
            <svg
              class="w-6 h-6 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            Archetype System
          </h3>
          <p class="text-gray-600 text-sm">
            7 psychological archetypes with confidence scoring and personalized
            insights
          </p>
        </div>
      </div>

      <!-- Main Demo Interface -->
      <div class="bg-white rounded-xl shadow-xl border-0 overflow-hidden">
        <div class="p-6 bg-gradient-to-r from-purple-50 to-blue-50 border-b">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-2xl font-bold text-gray-900">Interactive Demo</h2>
              <p class="text-gray-600">
                Try the enhanced mental health chat interface
              </p>
            </div>
            <div class="flex items-center space-x-2">
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800"
              >
                <span class="w-2 h-2 bg-green-400 rounded-full mr-2"></span>
                Live Demo
              </span>
            </div>
          </div>
        </div>

        <div class="p-6">
          <!-- Enhanced Mental Health Chat Component -->
          <div
            class="bg-gradient-to-br from-slate-50 to-blue-50 rounded-lg p-4 mb-4"
          >
            <div class="flex items-center space-x-2 mb-2">
              <span
                class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800"
              >
                <span class="w-2 h-2 bg-purple-400 rounded-full mr-2"></span>
                Enhanced UI Active
              </span>
              <span class="text-sm text-gray-600">
                Try typing messages like "I'm feeling overwhelmed" or "I have
                big dreams for the future"
              </span>
            </div>
          </div>
          <MindMirrorDemo client:load />
        </div>
      </div>

      <!-- Technical Details -->
      <div class="mt-12 grid md:grid-cols-2 gap-8">
        <div class="bg-white rounded-lg p-6 shadow-lg border-0">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">
            ðŸŽ¨ UI/UX Enhancements
          </h3>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-purple-500 rounded-full mr-3"></span>
              Gradient backgrounds with glassmorphism effects
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-blue-500 rounded-full mr-3"></span>
              Real-time archetype cards with confidence indicators
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
              Interactive mood metrics with progress bars
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-orange-500 rounded-full mr-3"></span>
              Animated neural activity visualization
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-red-500 rounded-full mr-3"></span>
              Tabbed insights and recommendations panel
            </li>
          </ul>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-lg border-0">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">
            ðŸ§  Analysis Features
          </h3>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-purple-500 rounded-full mr-3"></span>
              7 psychological archetypes (Wounded Healer, Visionary, etc.)
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-blue-500 rounded-full mr-3"></span>
              Multi-dimensional mood vector analysis
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
              Real-time coherence and urgency scoring
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-orange-500 rounded-full mr-3"></span>
              Brain region activity mapping
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-red-500 rounded-full mr-3"></span>
              Personalized insights and recommendations
            </li>
          </ul>
        </div>
      </div>

      <!-- Integration Notes -->
      <div
        class="mt-8 bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg p-6"
      >
        <h3 class="text-lg font-semibold text-gray-900 mb-3">
          ðŸ”— Integration with Pixelated Empathy
        </h3>
        <p class="text-gray-700 mb-4">
          This enhanced interface incorporates the best UI/UX patterns from
          Mind-Mirror while maintaining compatibility with our advanced
          Pixelated Empathy AI models and clinical training systems.
        </p>
        <div class="grid md:grid-cols-3 gap-4 text-sm">
          <div class="bg-white rounded p-3">
            <strong class="text-purple-600">Visual Design:</strong> Glassmorphism,
            gradients, and smooth animations
          </div>
          <div class="bg-white rounded p-3">
            <strong class="text-blue-600">Real-time Analysis:</strong> Instant psychological
            insights and archetype detection
          </div>
          <div class="bg-white rounded p-3">
            <strong class="text-green-600">Professional Focus:</strong> Maintains
            clinical accuracy and therapeutic value
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  /* Custom styles for the Mind Mirror demo */
  .mind-mirror-gradient {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1),
      rgba(255, 255, 255, 0.05)
    );
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .archetype-card {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1),
      rgba(255, 255, 255, 0.05)
    );
    border-radius: 15px;
    padding: 20px;
    margin: 10px 0;
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }

  .neural-activity-indicator {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .brain-region-glow {
    filter: drop-shadow(0 0 8px rgba(59, 130, 246, 0.5));
  }
</style>
