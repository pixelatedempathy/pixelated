---
// Enhanced Hero Section - Brutalist + Corporate + Elegant
export interface Props {
  title?: string
  subtitle?: string
  description?: string
  ctaPrimary?: { text: string; href: string }
  ctaSecondary?: { text: string; href: string }
}

const {
  title = 'PIXELATED EMPATHY',
  subtitle = 'AI-Powered Mental Health Training',
  description = 'Revolutionary AI simulation platform for mental health professionals. Experience immersive training scenarios, develop advanced therapeutic skills, and improve patient outcomes through cutting-edge technology.',
  ctaPrimary = { text: 'START TRAINING', href: '/demo-hub' },
  ctaSecondary = { text: 'LEARN MORE', href: '/features' },
} = Astro.props
---

<section
  class="elegant-surface"
  style="background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary)); padding: var(--space-20) 0; position: relative; overflow: hidden;"
>
  <!-- Background Elements -->
  <div
    style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.03; background-image: radial-gradient(circle at 25% 25%, var(--accent-primary) 0%, transparent 50%), radial-gradient(circle at 75% 75%, var(--accent-blue) 0%, transparent 50%);"
  >
  </div>

  <!-- Grid Pattern Overlay -->
  <div
    style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.02; background-image: linear-gradient(var(--border-primary) 1px, transparent 1px), linear-gradient(90deg, var(--border-primary) 1px, transparent 1px); background-size: 50px 50px;"
  >
  </div>

  <div class="container-refined" style="position: relative; z-index: 1;">
    <div
      class="grid-brutalist"
      style="grid-template-columns: 1fr 1fr; gap: var(--space-16); align-items: center; min-height: 80vh;"
    >
      <!-- Content Side -->
      <div class="space-y-8 animate-fade-in-up">
        <!-- Badge -->
        <div class="flex items-center gap-3">
          <div class="corporate-badge">
            <svg
              width="12"
              height="12"
              fill="currentColor"
              viewBox="0 0 24 24"
              style="margin-right: var(--space-1);"
            >
              <path
                d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
              ></path>
            </svg>
            NEXT-GEN AI TRAINING
          </div>
        </div>

        <!-- Main Heading -->
        <div class="space-y-4">
          <h1 class="heading-brutalist heading-brutalist--hero">
            {title}
          </h1>
          <p
            class="text-accent"
            style="font-size: var(--text-2xl); font-weight: var(--weight-semibold); line-height: 1.3;"
          >
            {subtitle}
          </p>
        </div>

        <!-- Description -->
        <p
          style="font-size: var(--text-lg); color: var(--text-secondary); line-height: 1.6; max-width: 540px;"
        >
          {description}
        </p>

        <!-- Stats Row -->
        <div
          class="grid-brutalist grid-brutalist--3"
          style="gap: var(--space-6); margin: var(--space-8) 0;"
        >
          <div class="text-center">
            <div
              class="heading-brutalist text-gradient"
              style="font-size: var(--text-3xl); line-height: 1;"
            >
              10K+
            </div>
            <div
              style="font-size: var(--text-sm); color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em; margin-top: var(--space-1);"
            >
              Training Sessions
            </div>
          </div>
          <div class="text-center">
            <div
              class="heading-brutalist text-gradient"
              style="font-size: var(--text-3xl); line-height: 1;"
            >
              95%
            </div>
            <div
              style="font-size: var(--text-sm); color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em; margin-top: var(--space-1);"
            >
              Accuracy Rate
            </div>
          </div>
          <div class="text-center">
            <div
              class="heading-brutalist text-gradient"
              style="font-size: var(--text-3xl); line-height: 1;"
            >
              24/7
            </div>
            <div
              style="font-size: var(--text-sm); color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em; margin-top: var(--space-1);"
            >
              Availability
            </div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row gap-4"
          style="margin-top: var(--space-8);"
        >
          <a
            href={ctaPrimary.href}
            class="btn-brutalist btn-brutalist--primary animate-pulse-glow"
            style="padding: var(--space-4) var(--space-8); font-size: var(--text-base); border-radius: var(--radius-xl); font-weight: var(--weight-bold);"
          >
            {ctaPrimary.text}
            <svg
              width="20"
              height="20"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              style="margin-left: var(--space-2);"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>

          <a
            href={ctaSecondary.href}
            class="btn-brutalist btn-brutalist--secondary"
            style="padding: var(--space-4) var(--space-8); font-size: var(--text-base); border-radius: var(--radius-xl); font-weight: var(--weight-semibold);"
          >
            {ctaSecondary.text}
          </a>
        </div>
      </div>

      <!-- Visual Side -->
      <div class="relative animate-fade-in-up" style="animation-delay: 200ms;">
        <!-- Main Card -->
        <div
          class="card-brutalist glass-surface"
          style="padding: var(--space-8); position: relative; overflow: hidden;"
        >
          <!-- Gradient Overlay -->
          <div
            style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, var(--accent-primary-subtle), var(--accent-blue-subtle)); opacity: 0.1; border-radius: var(--radius-lg);"
          >
          </div>

          <!-- Content -->
          <div style="position: relative; z-index: 1;">
            <!-- Header -->
            <div
              class="flex items-center justify-between"
              style="margin-bottom: var(--space-6);"
            >
              <div class="corporate-badge">AI SIMULATION</div>
              <div
                style="width: 8px; height: 8px; background: var(--accent-primary); border-radius: 50%; animation: pulse-glow 2s ease-in-out infinite;"
              >
              </div>
            </div>

            <!-- Simulated Chat Interface -->
            <div class="space-y-4">
              <div
                class="card-brutalist"
                style="padding: var(--space-4); background: var(--bg-level-2); border: 1px solid var(--border-subtle);"
              >
                <div class="flex items-start gap-3">
                  <div
                    style="width: 2rem; height: 2rem; background: var(--accent-blue); border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;"
                  >
                    <span
                      style="font-size: var(--text-xs); font-weight: var(--weight-bold); color: white;"
                      >AI</span
                    >
                  </div>
                  <div>
                    <p
                      style="font-size: var(--text-sm); color: var(--text-secondary); margin: 0;"
                    >
                      How are you feeling today? I notice you seem a bit
                      stressed...
                    </p>
                    <div
                      class="flex items-center gap-2"
                      style="margin-top: var(--space-2);"
                    >
                      <span
                        style="font-size: var(--text-xs); color: var(--text-muted);"
                        >Confidence: 94%</span
                      >
                      <span
                        style="width: 4px; height: 4px; background: var(--accent-primary); border-radius: 50%;"
                      ></span>
                      <span
                        style="font-size: var(--text-xs); color: var(--text-muted);"
                        >Empathy Score: 8.7</span
                      >
                    </div>
                  </div>
                </div>
              </div>

              <div
                class="card-brutalist"
                style="padding: var(--space-4); background: var(--bg-level-1); border: 1px solid var(--border-primary);"
              >
                <div class="flex items-start gap-3">
                  <div
                    style="width: 2rem; height: 2rem; background: var(--accent-primary); border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;"
                  >
                    <span
                      style="font-size: var(--text-xs); font-weight: var(--weight-bold); color: black;"
                      >U</span
                    >
                  </div>
                  <div>
                    <p
                      style="font-size: var(--text-sm); color: var(--text-primary); margin: 0;"
                    >
                      I've been having trouble sleeping and feeling anxious
                      about work...
                    </p>
                    <div
                      class="flex items-center gap-2"
                      style="margin-top: var(--space-2);"
                    >
                      <span
                        class="corporate-badge"
                        style="padding: var(--space-1) var(--space-2); font-size: 10px;"
                      >
                        PROCESSING RESPONSE
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Analytics Bar -->
            <div
              class="card-brutalist"
              style="margin-top: var(--space-6); padding: var(--space-4); background: var(--bg-level-1);"
            >
              <div
                class="flex items-center justify-between"
                style="margin-bottom: var(--space-2);"
              >
                <span
                  style="font-size: var(--text-xs); color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em;"
                >
                  Session Analytics
                </span>
                <span
                  style="font-size: var(--text-xs); color: var(--accent-primary); font-weight: var(--weight-semibold);"
                >
                  LIVE
                </span>
              </div>
              <div
                class="grid-brutalist grid-brutalist--3"
                style="gap: var(--space-4);"
              >
                <div class="text-center">
                  <div
                    style="font-size: var(--text-lg); font-weight: var(--weight-bold); color: var(--accent-primary);"
                  >
                    92%
                  </div>
                  <div
                    style="font-size: var(--text-xs); color: var(--text-muted);"
                  >
                    Engagement
                  </div>
                </div>
                <div class="text-center">
                  <div
                    style="font-size: var(--text-lg); font-weight: var(--weight-bold); color: var(--accent-blue);"
                  >
                    8.4
                  </div>
                  <div
                    style="font-size: var(--text-xs); color: var(--text-muted);"
                  >
                    Empathy
                  </div>
                </div>
                <div class="text-center">
                  <div
                    style="font-size: var(--text-lg); font-weight: var(--weight-bold); color: var(--accent-purple);"
                  >
                    A+
                  </div>
                  <div
                    style="font-size: var(--text-xs); color: var(--text-muted);"
                  >
                    Grade
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Floating Elements -->
        <div
          class="card-brutalist glass-surface"
          style="position: absolute; top: -var(--space-6); right: -var(--space-6); padding: var(--space-4); width: 160px; animation: float 6s ease-in-out infinite;"
        >
          <div class="flex items-center gap-2">
            <div
              style="width: 8px; height: 8px; background: var(--accent-primary); border-radius: 50%;"
            >
            </div>
            <span
              style="font-size: var(--text-xs); color: var(--text-primary); font-weight: var(--weight-semibold);"
            >
              AI Training Active
            </span>
          </div>
          <div
            style="font-size: var(--text-xs); color: var(--text-muted); margin-top: var(--space-1);"
          >
            Processing emotions...
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Floating animation */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .grid-brutalist {
      grid-template-columns: 1fr !important;
      gap: var(--space-8);
    }

    .heading-brutalist--hero {
      font-size: clamp(2rem, 8vw, 3rem) !important;
    }

    .elegant-surface {
      padding: var(--space-16) 0 !important;
    }

    .card-brutalist:last-child {
      position: static !important;
      margin-top: var(--space-6) !important;
      width: 100% !important;
    }
  }

  /* Animation delays for staggered entrance */
  .animate-fade-in-up:nth-child(1) {
    animation-delay: 0ms;
  }
  .animate-fade-in-up:nth-child(2) {
    animation-delay: 200ms;
  }
  .animate-fade-in-up:nth-child(3) {
    animation-delay: 400ms;
  }
</style>
