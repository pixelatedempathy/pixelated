{
  "deployment": {
    "name": "pixelated-empathy",
    "version": "1.0.0",
    "environments": {
      "development": {
        "docker_image": "pixelated-empathy:dev",
        "compose_file": "docker-compose.dev.yml",
        "port": 3000,
        "replicas": 1,
        "resources": {
          "memory": "512Mi",
          "cpu": "0.5"
        }
      },
      "staging": {
        "docker_image": "pixelated-empathy:staging",
        "compose_file": "docker-compose.staging.yml",
        "port": 3000,
        "replicas": 2,
        "resources": {
          "memory": "1Gi",
          "cpu": "1"
        }
      },
      "production": {
        "docker_image": "pixelated-empathy:prod",
        "compose_file": "docker-compose.prod.yml",
        "port": 3000,
        "replicas": 3,
        "resources": {
          "memory": "2Gi",
          "cpu": "2"
        }
      }
    },
    "health_check": {
      "endpoint": "/health",
      "timeout": 30,
      "retries": 3,
      "interval": 10
    },
    "deployment_strategy": {
      "type": "rolling",
      "max_unavailable": 1,
      "max_surge": 1
    },
    "rollback": {
      "enabled": true,
      "auto_rollback_on_failure": true,
      "keep_revisions": 5
    }
  }
}