        <div class={cn(card)}>
          <div class="flex gap-3">
            <span
              class="relative block rounded-[--avatar-border-radius] text-lg size-10"
            >
              <img
                class="h-full w-full rounded-[--avatar-border-radius] object-cover"
                alt="Dr. Sarah Chen"
                src="https://randomuser.me/api/portraits/women/1.jpg"
                loading="lazy"
                width="120"
                height="120"
              />
