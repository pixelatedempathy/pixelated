---
import TreatmentPlanner from '../components/treatment/TreatmentPlanner.tsx'

// Page metadata
const title = 'Treatment Planning'
const description =
  'Personalized, evidence-based treatment recommendations for therapy planning.'
---

<main class="max-w-4xl mx-auto py-10 px-4">
  <h1 class="text-3xl font-bold mb-2">{title}</h1>
  <p class="text-lg text-gray-600 mb-8">{description}</p>

  <TreatmentPlanner
    client:load
    pageTitle={title}
    pageDescription={description}
  />
</main>

<style>
  .filter-btn {
    @apply px-4 py-2 rounded bg-gray-100 hover:bg-blue-100 text-gray-700 font-medium transition;
  }
  .filter-btn.active {
    @apply bg-blue-600 text-white;
  }
</style>
