  }

  /* Responsive utilities */
  @media (max-width: 768px) {
    .md\\:display-none {
      display: none !important;
    }
  }

  @media (min-width: 768px) {
    .md\\:display-flex {
      display: flex !important;
    }
  }

  /* Icon size responsive utilities */
  @media (min-width: 768px) {
