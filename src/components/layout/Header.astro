    }
  }

  /* Container responsive margin */
  @media (min-width: 1024px) {
    .lg\\:margin-left-8 {
      margin-left: var(--space-8) !important;
    }
  }

  /* Responsive text display */
  @media (min-width: 640px) {
    .sm\\:fontsize-var\\(--text-lg\\) {
