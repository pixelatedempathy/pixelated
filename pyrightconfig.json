{
  "include": ["src", "tests", "ai"],
  "exclude": [
    "**/node_modules/**",
    "**/stubs/**",
    "**/.venv/**",
    "**/.env",
    "**/build/**",
    "**/dist/**",
    "**/datasets/**",
    ".coveragerc",
    "ai/data",
    "ai/lightning",
    "ai/dataset_pipeline/pixelated-training"
  ],
  "extraPaths": ["stubs"],
  "typeCheckingMode": "basic",
  "reportMissingTypeStubs": false,
  "reportMissingImports": false,
  "reportMissingModuleSource": false,
  "reportPrivateUsage": false,
  "pythonVersion": "3.11"
}
