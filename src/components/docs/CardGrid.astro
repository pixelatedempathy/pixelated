---
interface Props {
  cols?: number
  className?: string
}

const { cols = 3, className } = Astro.props
---

<div class={`card-grid card-grid-${cols} ${className || ''}`}>
  <slot />
</div>

<style>
  .card-grid {
    display: grid;
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .card-grid-1 {
    grid-template-columns: 1fr;
  }

  .card-grid-2 {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .card-grid-3 {
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .card-grid-4 {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }

  @media (max-width: 768px) {
    .card-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
