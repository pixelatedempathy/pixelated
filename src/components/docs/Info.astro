---
// Info component for displaying informational messages
export interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<div class={`info-box ${className || ''}`}>
  <div class="info-icon">
    <svg
      width="16"
      height="16"
      viewBox="0 0 16 16"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM8 4a.75.75 0 0 1 .75.75v3.5a.75.75 0 0 1-1.5 0v-3.5A.75.75 0 0 1 8 4zm0 8a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"
        fill="currentColor"></path>
    </svg>
  </div>
  <div class="info-content">
    <slot />
  </div>
</div>

<style>
  .info-box {
    @apply flex items-start gap-3 p-4 bg-blue-50 border border-blue-200 rounded-lg text-blue-900 dark:bg-blue-900/20 dark:border-blue-800 dark:text-blue-100;
  }

  .info-icon {
    @apply flex-shrink-0 text-blue-600 dark:text-blue-400;
  }

  .info-content {
    @apply flex-1 text-sm;
  }

  .info-content :global(p:first-child) {
    @apply mt-0;
  }

  .info-content :global(p:last-child) {
    @apply mb-0;
  }
</style>
