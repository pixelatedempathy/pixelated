---
export const prerender = false

import DashboardLayout from '@/layouts/DashboardLayout.astro'
import { DiscoveryPage } from '@/components/journal-research/pages'

// @ts-expect-error Astro.props is injected at runtime
const { user } = Astro.props as { user: any }

const sessionId = Astro.url.searchParams.get('sessionId')
---

<DashboardLayout
  title="Source Discovery | Pixelated Empathy"
  description="Discover and explore journal data sources"
>
  <div class="container mx-auto py-6 space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold">Source Discovery</h1>
        <p class="text-muted-foreground mt-1">
          Discover and evaluate journal data sources for your research
        </p>
      </div>
    </div>

    <DiscoveryPage client:load sessionId={sessionId} />
  </div>
</DashboardLayout>

