# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# MongoDB
MONGODB_URI=mongodb://localhost:27017/business-strategy-cms

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=business_strategy_cms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password_placeholder

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=jwt_secret_placeholder_change_in_prod
JWT_REFRESH_SECRET=jwt_refresh_secret_placeholder_change_in_prod
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=smtp_password_placeholder
FROM_EMAIL=noreply@example.com
FROM_NAME=Business Strategy CMS

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# OVHCloud Object Storage (S3-compatible)
OVH_ENDPOINT=https://s3.us-east-1.io.cloud.ovh.net
OVH_ACCESS_KEY_ID=ovh_access_key_placeholder
OVH_SECRET_ACCESS_KEY=ovh_secret_key_placeholder
OVH_REGION=us-east-1
OVH_BUCKET_NAME=business-strategy-cms-uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# External APIs
YAHOO_FINANCE_API_KEY=yahoo_api_key_placeholder
YAHOO_FINANCE_API_URL=https://query1.finance.yahoo.com/v8/finance
ALPHA_VANTAGE_API_KEY=alpha_vantage_api_key_placeholder
ALPHA_VANTAGE_API_URL=https://www.alphavantage.co/query

# Cache Configuration
CACHE_TTL_SECONDS=300
REDIS_CACHE_TTL=3600

# Rate Limiting
YAHOO_RATE_LIMIT_REQUESTS=100
YAHOO_RATE_LIMIT_WINDOW=3600000
ALPHA_VANTAGE_RATE_LIMIT_REQUESTS=5
ALPHA_VANTAGE_RATE_LIMIT_WINDOW=60000

# Feature Flags
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_WORKFLOW_APPROVAL=true
ENABLE_ANALYTICS=true
ENABLE_EXPORT=true
ENABLE_YAHOO_FINANCE=true
ENABLE_ALPHA_VANTAGE=true
