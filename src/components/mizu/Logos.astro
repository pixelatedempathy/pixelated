---
const companies = [
  'Metro Health',
  'City Clinic',
  'TherapyNow',
  'MindfulCare',
  'HealthPlus',
  'WellnessCenter'
]
---
<section class="py-12 border-y border-white/5 bg-slate-900/30">
    <div class="container mx-auto px-4">
        <p class="text-center text-slate-500 text-sm font-semibold uppercase tracking-widest mb-8">Trusted by leading healthcare institutions</p>
        <div class="flex flex-wrap justify-center gap-8 md:gap-16 opacity-50 grayscale hover:grayscale-0 transition-all duration-500">
             {companies.map(company => (
                 <div class="flex items-center gap-2">
                    <div class="w-6 h-6 rounded bg-slate-500"></div>
                    <span class="text-xl font-bold text-slate-300">{company}</span>
                 </div>
             ))}
        </div>
    </div>
</section>
