---
const institutions = [
  { name: 'Mayo Clinic', logo: '/images/logos/mayo-clinic.png' },
  { name: 'Johns Hopkins', logo: '/images/logos/johns-hopkins.png' },
  { name: 'Kaiser Permanente', logo: '/images/logos/kaiser-permanente.png' },
  { name: 'NIH', logo: '/images/logos/nih.png' },
  { name: 'VA Health', logo: '/images/logos/va-health.png' },
  { name: 'Harvard University', logo: '/images/logos/harvard-university.png' },
]
---

<section class="py-12 border-y border-white/5 bg-slate-900/30 overflow-hidden">
  <div class="container mx-auto px-4">
    <p
      class="text-center text-slate-500 text-xs font-semibold uppercase tracking-widest mb-8"
    >
      Trusted by leading healthcare institutions
    </p>

    <div class="relative w-full overflow-hidden mask-linear">
      <div
        class="flex gap-12 animate-scroll w-max hover:[animation-play-state:paused]"
      >
        {
          [...institutions, ...institutions, ...institutions].map(
            (institution, index) => (
              <div class="flex items-center justify-center h-10 w-40 grayscale hover:grayscale-0 transition-grayscale duration-300">
                <img
                  src={institution.logo}
                  alt={institution.name}
                  class="h-full w-full object-contain brightness-200 contrast-50 hover:brightness-100 hover:contrast-100 transition-all duration-300"
                />
              </div>
            ),
          )
        }
      </div>
    </div>
  </div>
</section>

<style>
  .mask-linear {
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-33.33%);
    }
  }

  .animate-scroll {
    animation: scroll 30s linear infinite;
  }
</style>
