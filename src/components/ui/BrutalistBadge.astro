---
export interface Props {
  variant?: 'success' | 'info' | 'warning' | 'danger'
  size?: 'sm' | 'md' | 'lg'
  class?: string
}

const { variant = 'info', size = 'md', class: className = '' } = Astro.props

const baseClasses = 'brutalist-badge'
const variantClasses = {
  success: 'brutalist-badge--success',
  info: 'brutalist-badge--info',
  warning: 'brutalist-badge--warning',
  danger: 'bg-red-600/20 text-red-400 border-red-600',
}

const sizeClasses = {
  sm: 'text-xs px-2 py-1',
  md: 'text-sm px-3 py-1',
  lg: 'text-base px-4 py-2',
}

const classes = [
  baseClasses,
  variantClasses[variant],
  sizeClasses[size],
  className,
]
  .filter(Boolean)
  .join(' ')
---

<span class={classes}>
  <slot />
</span>
