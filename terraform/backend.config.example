# Terraform backend configuration for GitLab-managed state
# Copy this file to backend.config and update with your GitLab values
# DO NOT commit backend.config with actual tokens

# Replace YOUR_GITLAB_PROJECT_ID with your actual GitLab project ID
address = "https://gitlab.com/api/v4/projects/YOUR_GITLAB_PROJECT_ID/terraform/state/pixelated-azure-infrastructure"
lock_address = "https://gitlab.com/api/v4/projects/YOUR_GITLAB_PROJECT_ID/terraform/state/pixelated-azure-infrastructure/lock"
unlock_address = "https://gitlab.com/api/v4/projects/YOUR_GITLAB_PROJECT_ID/terraform/state/pixelated-azure-infrastructure/lock"
username = "gitlab-ci-token"

# HTTP methods for lock/unlock operations
lock_method = "POST"
unlock_method = "DELETE"

# GitLab token should be set via environment variable (NOT in this file):
# export TF_HTTP_PASSWORD="glpat-xxxxxxxxxxxxxxxxxxxx"
# Or in CI/CD pipelines, set TF_HTTP_PASSWORD as an encrypted variable

# Other environment variables (set via CI/CD):
# TF_VAR_azure_subscription_id
# TF_VAR_azure_tenant_id