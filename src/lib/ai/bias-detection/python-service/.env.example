# Bias Detection Service Environment Configuration

# Application Settings
APP_NAME=Bias Detection Service
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Settings
DATABASE_URL=postgresql://bias_user:bias_password@localhost:5432/bias_detection

# Redis Settings
REDIS_URL=redis://localhost:6379/0

# Model Settings
MODEL_CACHE_DIR=./models
TENSORFLOW_MODEL_PATH=./models/tensorflow
PYTORCH_MODEL_PATH=./models/pytorch

# ML Settings
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=32
MODEL_TIMEOUT=30

# Security Settings
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=60

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=900
ENABLE_ASYNC_PROCESSING=true

