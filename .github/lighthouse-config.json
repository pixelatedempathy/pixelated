{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "settings": {
        "formFactor": "mobile",
        "throttlingMethod": "simulate",
        "throttling": {
          "rttMs": 150,
          "throughputKbps": 1638.4,
          "requestLatencyMs": 562.5,
          "downloadThroughputKbps": 1474.56,
          "uploadThroughputKbps": 675,
          "cpuSlowdownMultiplier": 4
        },
        "screenEmulation": {
          "mobile": true
        }
      },
      "chromeFlags": "--no-sandbox"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.6 }],
        "categories:accessibility": ["warn", { "minScore": 0.9 }],
        "categories:best-practices": ["warn", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.9 }],
        "largest-contentful-paint": [
          "warn",
          { "maxNumericValue": 8000, "aggregationMethod": "optimistic" }
        ],
        "total-blocking-time": [
          "warn",
          { "maxNumericValue": 600, "aggregationMethod": "median" }
        ],
        "cumulative-layout-shift": [
          "error",
          { "maxNumericValue": 0.1, "aggregationMethod": "pessimistic" }
        ],
        "first-contentful-paint": [
          "warn",
          { "maxNumericValue": 3000, "aggregationMethod": "optimistic" }
        ],
        "server-response-time": [
          "warn",
          { "maxNumericValue": 1200, "aggregationMethod": "median" }
        ],
        "uses-long-cache-ttl": ["warn", { "minScore": 0.8 }],
        "unused-javascript": "warn",
        "uses-rel-preload": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
