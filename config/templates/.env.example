# ============================================
# Pixelated Empathy - Environment Variables
# ============================================
# Copy to .env and fill in values for local development
# DO NOT commit actual secrets to version control!

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=4321
PUBLIC_SITE_URL=https://pixelatedempathy.com
DOMAIN=pixelatedempathy.com

# ============================================
# Database Configuration
# ============================================
# PostgreSQL
DB_HOST=
DB_PORT=5432
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_SSL_MODE=require
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# MongoDB (legacy)
MONGODB_URI=

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600
REDIS_KEY_PREFIX=pixelated:
REDIS_SSL=false
REDIS_URL=

# ============================================
# Authentication
# ============================================
# better-auth
BETTER_AUTH_URL=
BETTER_AUTH_SECRET=

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d
JWT_ISSUER=pixelated-empathy

# ============================================
# Session Configuration
# ============================================
SESSION_TIMEOUT=3600000
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAME_SITE=strict

# ============================================
# AI Service Keys
# ============================================
OPENAI_API_KEY=
GOOGLE_AI_API_KEY=
HUGGINGFACE_TOKEN=
HUGGINGFACE_API_KEY=
NVIDIA_API_KEY=
ANTHROPIC_API_KEY=

# AI Model Configuration
AI_MODEL_CACHE_TTL=7200
AI_BATCH_SIZE=10
AI_MAX_CONCURRENT=5

# ============================================
# Cloud Storage Providers
# ============================================
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# Google Cloud
GOOGLE_CLOUD_PROJECT=
GCP_PROJECT_ID=

# Azure Storage
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_CONTAINER=
AZURE_STORAGE_CONNECTION_STRING=

# ============================================
# CDN Configuration
# ============================================
CDN_BASE_URL=

# ============================================
# Monitoring & Observability
# ============================================
# Sentry - Error Tracking and Metrics
# Reference: https://docs.sentry.io/platforms/javascript/guides/astro/metrics/
# Reference: https://docs.sentry.io/platforms/python/metrics/
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=pixelated-empathy-dq
SENTRY_PROJECT=pixel-astro

# Sentry Metrics (Beta) - enabled by default in SDK 10.26.2+
# Set to "false" to disable metrics collection
SENTRY_ENABLE_METRICS=true

# Sentry Sampling Rates
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.05

# Sentry Debug Mode (set to "1" to enable verbose logging)
SENTRY_DEBUG=0

# New Relic
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=

# Weights & Biases
WANDB_API_KEY=

# Grafana/Prometheus
GRAFANA_URL=
GRAFANA_ADMIN_PASSWORD=
PROMETHEUS_URL=

# Performance
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# API Configuration
# ============================================
API_TIMEOUT=10000
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Security
# ============================================
CORS_ORIGINS=
SSL_EMAIL=

# ============================================
# Email Configuration
# ============================================
EMAIL_FROM=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ============================================
# Feature Flags
# ============================================
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# ============================================
# Cache Configuration
# ============================================
CACHE_COMPRESSION_THRESHOLD=512
CACHE_DEFAULT_TTL=3600

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# ============================================
# Health Check Configuration
# ============================================
HEALTH_CHECK_PATH=/api/health/simple
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ============================================
# Load Balancer Configuration
# ============================================
LOAD_BALANCER_ALGORITHM=round_robin

# ============================================
# Geographic Routing
# ============================================
GEO_ROUTING_ENABLED=false
PRIMARY_REGION=
FAILOVER_REGION=

# ============================================
# Azure Specific (when deploying to Azure)
# ============================================
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_REGION=
AZURE_AKS_CLUSTER_NAME=
AZURE_CONTAINER_REGISTRY=

# ============================================
# GKE/GCP Specific (when deploying to GCP)
# ============================================
GKE_CLUSTER_NAME=
GKE_ZONE=
GKE_REGION=
GKE_NAMESPACE=
GKE_DEPLOYMENT_NAME=
GKE_SERVICE_NAME=
GKE_MASTER_IP=
GKE_ENVIRONMENT_URL=
GKE_REPLICAS=3
GKE_MIN_NODES=1
GKE_MAX_NODES=5
GKE_MAX_SURGE=1
GKE_MAX_UNAVAILABLE=0
CANARY_PERCENTAGE=25
AUTO_ROLLBACK=true

# Container Registry
REGISTRY=
IMAGE_NAME=

# ============================================
# Atlassian Integration (Jira/Confluence)
# ============================================
CONFLUENCE_URL=
CONFLUENCE_USERNAME=
CONFLUENCE_API_TOKEN=
JIRA_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=
