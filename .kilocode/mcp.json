{
    "mcpServers": {
        "metoro": {
            "command": "/home/vivi/pixelated/bin/metoro-mcp-server",
            "args": [],
            "env": {
                "METORO_AUTH_TOKEN": "${METORO_AUTH_TOKEN}",
                "METORO_API_URL": "https://us-east.metoro.io"
            }
        },
        "Atlassian": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-e",
                "CONFLUENCE_URL=https://gemcityxyz.atlassian.net/",
                "-e",
                "CONFLUENCE_USERNAME=chad@gemcity.xyz",
                "-e",
                "CONFLUENCE_API_TOKEN=${CONFLUENCE_API_TOKEN}",
                "-e",
                "JIRA_URL=https://gemcityxyz.atlassian.net/",
                "-e",
                "JIRA_USERNAME=chad@gemcity.xyz",
                "-e",
                "JIRA_API_TOKEN=${JIRA_API_TOKEN}",
                "ghcr.io/sooperset/mcp-atlassian:latest"
            ],
            "env": {
                "CONFLUENCE_URL": "https://gemcityxyz.atlassian.net/",
                "CONFLUENCE_USERNAME": "chad@gemcity.xyz",
                "CONFLUENCE_API_TOKEN": "${CONFLUENCE_API_TOKEN}",
                "JIRA_URL": "https://gemcityxyz.atlassian.net/",
                "JIRA_USERNAME": "chad@gemcity.xyz",
                "JIRA_API_TOKEN": "${JIRA_API_TOKEN}"
            },
            "alwaysAllow": [
                "jira_get_issue",
                "jira_search",
                "jira_get_user_profile"
            ],
            "disabled": false
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "/home/vivi/pixelated"
            ]
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ]
        },
        "azure-devops": {
            "command": "npx",
            "args": [
                "-y",
                "@azure-devops/mcp",
                "peetape",
                "--tenant",
                "15760c36-862d-4476-9c87-baeb9fb6e1cd",
                "--authentication",
                "azcli"
            ],
            "disabled": true,
            "alwaysAllow": []
        },
        "sequentialthinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "git": {
            "command": "uvx",
            "args": [
                "mcp-server-git",
                "--repository",
                "/home/vivi/pixelated"
            ]
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ],
            "env": {
                "DEFAULT_MINIMUM_TOKENS": ""
            }
        }
    }
}