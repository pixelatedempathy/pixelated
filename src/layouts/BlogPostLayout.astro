---
import type { CollectionEntry } from "astro:content";
import type { ShareConfig } from "@/types";
import BaseLayout from "./BaseLayout.astro";
import ShareLink from "@/components/widgets/ShareLink.astro";
import "@/styles/enhanced-theme.css";

interface Props {
  entry: CollectionEntry<"blog"> | CollectionEntry<"docs">;
  basePath?: string;
}

const { entry, basePath = "blog" } = Astro.props;
const {
  title: postTitle,
  description,
  image,
  pubDate,
  readingTime,
  tags = [],
} = entry.data;

const formattedDate = new Date(pubDate);

// Format date in Antfu style: Oct 4, 2023
const formatDate = (date: Date) => {
  return date.toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
    year: "numeric",
  });
};

// Configure social sharing
const shareConfig: ShareConfig = {
  twitter: [true, "@GradiantAscent"],
  mastodon: false,
  facebook: true,
  pinterest: false,
  reddit: false,
  telegram: false,
  whatsapp: false,
  email: false,
};

// Build URL for sharing (works with prerendered pages)
const shareUrl = `https://pixelated.empathy.dev/${basePath}/${entry.data.slug || entry.slug}`;
const pathname = `/${basePath}/${entry.data.slug || entry.slug}`;
---

<BaseLayout
  title={postTitle}
  {description}
  ogImage={image?.url}
  bgType="rose"
  {pathname}
>
  <article class="max-w-prose mx-auto container-refined py-12">
    <header class="mb-12">
      <div class="section-number mb-6">Blog</div>
      <div class="mb-6">
        <div
          class="flex items-center text-sm mb-4"
          style="color: var(--text-muted);"
        >
          <time datetime={formattedDate.toISOString()}>
            {formatDate(formattedDate)}
          </time>
          {
            readingTime && readingTime > 0 && (
              <>
                <span class="mx-2">Â·</span>
                <span>{readingTime} min read</span>
              </>
            )
          }
        </div>

        <h1
          class="display-heading mb-6"
          transition:name={`post-title-${entry.data.slug}`}
        >
          {postTitle}
        </h1>

        {description && <p class="lede-text">{description}</p>}
      </div>

      {
        tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map((tag: unknown) => (
              <a
                href={`/blog/tags/${tag}`}
                class="eyebrow-text px-3 py-1 rounded-full transition-colors"
                style="background: var(--bg-elevated); border: 1px solid var(--border-primary); color: var(--text-secondary);"
                onmouseover="this.style.background='var(--bg-card)'; this.style.borderColor='var(--accent-primary)'; this.style.color='var(--accent-primary)'"
                onmouseout="this.style.background='var(--bg-elevated)'; this.style.borderColor='var(--border-primary)'; this.style.color='var(--text-secondary)'"
                transition:animate="slide"
                data-astro-prefetch
              >
                {tag}
              </a>
            ))}
          </div>
        )
      }

      {
        image?.url && (
          <img
            src={image.url}
            alt={image.alt || postTitle}
            class="w-full rounded-lg shadow-md mb-8"
            transition:name={`image-${entry.data.slug}`}
          />
        )
      }
    </header>

    <div class="prose dark:prose-invert prose-lg max-w-none">
      <slot />
    </div>

    <footer
      class="mt-12 pt-8 border-t"
      style="border-color: var(--border-primary);"
    >
      <!-- Social Share Section -->
      <div class="flex justify-between items-center">
        <a
          href="/blog"
          class="nav-link-refined flex items-center"
          style="color: var(--text-secondary);"
          data-astro-prefetch
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-1"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z"
              clip-rule="evenodd"></path>
          </svg>
          back
        </a>

        <div class="flex items-center">
          <ShareLink config={shareConfig} url={shareUrl} />
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>

<style is:global>
  /* Antfu style adjustments for blog posts */
  article {
    --content-width: 740px;
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  /* Typography */
  .prose {
    font-size: 1.05rem;
    line-height: 1.75;
  }

  .prose p {
    margin-bottom: 1.5em;
  }

  .prose h2 {
    font-weight: 600;
    font-size: 1.65rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.25rem;
    border-bottom: 1px solid rgba(125, 125, 125, 0.3);
  }

  .prose h3 {
    font-weight: 600;
    font-size: 1.35rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose a {
    color: var(--tw-prose-links);
    text-decoration: none;
    font-weight: inherit;
    border-bottom: 1px dotted;
    transition: border-bottom 0.2s;
  }

  .prose a:hover {
    border-bottom: 1px solid;
  }

  .prose img {
    border-radius: 0.5rem;
    margin: 1.5rem 0;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .prose code {
    font-size: 0.9em;
    background-color: rgba(125, 125, 125, 0.1);
    padding: 0.2em 0.4em;
    border-radius: 0.25em;
  }

  .prose pre code {
    background: none;
    padding: 0;
    font-size: 0.8em;
  }

  .prose blockquote {
    border-left-width: 0.25rem;
    border-left-color: rgba(125, 125, 125, 0.3);
    font-style: italic;
    padding-left: 1rem;
    background-color: rgba(125, 125, 125, 0.05);
    border-radius: 0 0.25rem 0.25rem 0;
    margin: 1.5rem 0;
    padding: 0.75rem 1rem;
  }
</style>
