---
const institutions = [
  { name: 'Mayo Clinic', logo: '/images/logos/mayo-clinic.png' },
  { name: 'Johns Hopkins', logo: '/images/logos/johns-hopkins.png' },
  { name: 'Kaiser Permanente', logo: '/images/logos/kaiser-permanente.png' },
  { name: 'NIH', logo: '/images/logos/nih.png' },
  { name: 'VA Health', logo: '/images/logos/va-health.png' },
  { name: 'Harvard University', logo: '/images/logos/harvard-university.png' },
]
---

<section class="py-12 border-y border-white/5 bg-slate-900/30">
  <div class="container mx-auto px-4">
    <p
      class="text-center text-slate-500 text-xs font-semibold uppercase tracking-widest mb-8"
    >
      Trusted by leading healthcare institutions
    </p>
    <div
      class="flex flex-wrap justify-center items-center gap-8 md:gap-12 opacity-60 hover:opacity-100 transition-opacity duration-500"
    >
      {
        institutions.map((institution) => (
          <div class="flex items-center justify-center h-10 grayscale hover:grayscale-0 transition-all duration-300">
            <img
              src={institution.logo}
              alt={institution.name}
              class="h-full w-auto object-contain brightness-200 contrast-50 hover:brightness-100 hover:contrast-100 transition-all duration-300"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
