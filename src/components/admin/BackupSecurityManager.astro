    mockBackups[0] || {
      id: 'default-backup',
      type: BackupType.FULL,
      timestamp: new Date().toISOString(),
      size: 0,
      location: StorageLocation.PRIMARY,
      status: BackupStatus.PENDING,
      retentionDate: new Date(
        Date.now() + 365 * 24 * 60 * 60 * 1000,
