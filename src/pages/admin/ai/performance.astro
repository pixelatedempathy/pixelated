---
import PerformanceDashboard from "../../../components/admin/PerformanceDashboard.astro";
import BaseLayout from "../../../layouts/BaseLayout.astro";

// Verify admin access via session
const session = (Astro.locals as any)?.session;
const user = (Astro.locals as any)?.user;

if (!session || !user || user.role !== "admin") {
  return Astro.redirect("/auth/sign-in");
}
---

<BaseLayout title="AI Performance">
  <div class="container py-6">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold">AI Performance Dashboard</h1>
        <p class="text-muted-foreground">
          Monitor and analyze AI service performance metrics
        </p>
      </div>
    </div>

    <PerformanceDashboard />
  </div>
</BaseLayout>
