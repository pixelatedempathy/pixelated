{
  "$ref": "#/definitions/docs",
  "definitions": {
    "docs": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "pubDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "updatedDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "lastModDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "author": {
          "type": "string"
        },
        "image": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "alt": {
              "type": "string"
            }
          },
          "required": ["url", "alt"],
          "additionalProperties": false
        },
        "tags": {
          "anyOf": [
            { "type": "string" },
            {
              "type": "array",
              "items": { "type": "string" }
            }
          ],
          "default": []
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "readingTime": {
          "type": "number"
        },
        "category": {
          "type": "string",
          "enum": ["Technical", "Research", "Case Study", "Tutorial", "News"]
        },
        "canonicalUrl": {
          "type": "string",
          "format": "uri"
        },
        "slug": {
          "type": "string"
        },
        "series": {
          "type": "string"
        },
        "seriesOrder": {
          "type": "number"
        },
        "toc": {
          "type": "boolean",
          "default": true
        },
        "share": {
          "type": "boolean",
          "default": true
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": ["title", "description", "pubDate", "author"],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
