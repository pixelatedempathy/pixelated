---
import BaseLayout from '@/layouts/BaseLayout.astro'
import HeroSection from '@/components/ui/HeroSection.astro'
import FeaturesSection from '@/components/ui/FeaturesSection.astro'
import CTAButton from '@/components/ui/CTAButton.astro'
---

<style>
  @import url('/src/styles/index-responsive.css');
</style>

<BaseLayout
  title="AI-Powered Mental Health Training"
  description="Revolutionary AI simulation platform for mental health professionals. Experience immersive training scenarios and improve patient outcomes through cutting-edge technology."
  bgType="dark"
>
  <!-- Enhanced Hero Section - Brutalist + Corporate + Enterprise + Antfu -->
  <HeroSection />

  <!-- Enhanced Features Section - Unified Dark Theme Design -->
  <FeaturesSection />

  <!-- Clean Stats Section - Mizu-inspired -->
  <section class="stats-section">
    <div class="container-refined stats-container">
      <div class="stats-header">
        <div class="stats-badge">
          <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
          <span>ENTERPRISE TRUST</span>
        </div>
        <h2 class="stats-title">Trusted by Professionals</h2>
        <p class="stats-description">
          Leading healthcare institutions rely on our unified AI training platform
        </p>
      </div>

      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon stat-icon-primary">üè•</div>
          <div class="stat-number">500+</div>
          <div class="stat-label">Healthcare Institutions</div>
        </div>

        <div class="stat-card">
          <div class="stat-icon stat-icon-blue">üë®‚Äç‚öïÔ∏è</div>
          <div class="stat-number">15K+</div>
          <div class="stat-label">Trained Professionals</div>
        </div>

        <div class="stat-card">
          <div class="stat-icon stat-icon-purple">‚≠ê</div>
          <div class="stat-number">98%</div>
          <div class="stat-label">Satisfaction Rate</div>
        </div>

        <div class="stat-card">
          <div class="stat-icon stat-icon-green">üïê</div>
          <div class="stat-number">24/7</div>
          <div class="stat-label">Platform Availability</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<!-- Enhanced Testimonial Section with Corporate and Enterprise Aesthetic -->
<section
  class="testimonial-section elegant-surface"
  style="background: linear-gradient(135deg, var(--bg-secondary), var(--bg-elevated)); padding: var(--space-24) 0; position: relative; overflow: hidden; overflow-x: hidden; width: 100%; max-width: 100vw; box-sizing: border-box; border-top: 1px solid var(--border-primary);"
>
  <!-- Antfu-inspired background elements -->
  <div
    style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.03; background-image: radial-gradient(circle at 30% 30%, var(--accent-primary-subtle) 0%, transparent 70%), radial-gradient(circle at 70% 70%, var(--accent-blue-subtle) 0%, transparent 70%); mix-blend-mode: overlay;"
  >
  </div>

  <!-- Subtle grid pattern - Corporate aesthetic -->
  <div
    style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.02; background-image: linear-gradient(var(--border-muted) 1px, transparent 1px), linear-gradient(90deg, var(--border-muted) 1px, transparent 1px); background-size: 80px 80px; mix-blend-mode: overlay;"
  >
  </div>

  <div class="container-refined" style="overflow-x: hidden; width: 100%; max-width: 100%; box-sizing: border-box;">
    <div
      class="testimonial-grid"
      style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--space-16); align-items: center; width: 100%; max-width: 100%; box-sizing: border-box;"
    >
      <div
        class="testimonial-content"
        style="animation: fadeInUp 0.6s ease-out;"
      >
        <!-- Enhanced Professional Testimonial Badge -->
        <div
          class="testimonial-badge"
          style="margin-bottom: var(--space-6); display: inline-flex; align-items: center; gap: var(--space-2); padding: var(--space-2) var(--space-4); background: linear-gradient(135deg, var(--accent-blue-subtle), var(--accent-primary-subtle)); border: 1px solid rgba(59, 130, 246, 0.2); border-radius: var(--radius-full); backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px); position: relative;"
        >
          <svg
            width="14"
            height="14"
            fill="currentColor"
            viewBox="0 0 24 24"
            style="color: var(--accent-blue); position: relative; z-index: 1;"
          >
            <path
              d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"
            ></path>
          </svg>
          <span
            style="color: var(--accent-blue); font-weight: var(--weight-semibold); text-transform: uppercase; letter-spacing: 0.05em; font-size: var(--text-xs); position: relative; z-index: 1;"
            >PROFESSIONAL TESTIMONIAL</span
          >
        </div>

        <blockquote
          class="testimonial-quote"
          style="font-size: var(--text-3xl); line-height: 1.4; color: var(--text-primary); margin-bottom: var(--space-8); font-style: italic; font-weight: var(--weight-light); position: relative; padding-left: var(--space-6); background: linear-gradient(135deg, var(--text-primary), var(--text-secondary)); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;"
        >
          "This platform has revolutionized how we train our therapists. The AI
          scenarios are incredibly realistic and the analytics provide
          invaluable insights that directly improve patient outcomes."
          <!-- Enhanced quote decoration -->
          <div
            style="position: absolute; left: 0; top: 0; font-size: 4rem; color: var(--accent-primary); opacity: 0.3; font-weight: var(--weight-bold); line-height: 1; transform: translateY(-0.5rem);"
          >
            "
          </div>
        </blockquote>

        <div
          class="testimonial-author"
          style="display: flex; align-items: center; gap: var(--space-4); margin-bottom: var(--space-6);"
        >
          <div
            class="author-avatar"
            style="width: 4.5rem; height: 4.5rem; background: linear-gradient(135deg, var(--accent-primary), var(--accent-primary-hover)); border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0; font-weight: var(--weight-bold); color: var(--bg-void); font-size: var(--text-lg); box-shadow: var(--shadow-lg), 0 0 20px rgba(16, 185, 129, 0.2); border: 2px solid var(--accent-primary-muted);"
          >
            <span>DR</span>
          </div>
          <div class="author-info">
            <div
              class="author-name"
              style="font-weight: var(--weight-semibold); color: var(--text-primary); font-size: var(--text-lg); margin-bottom: var(--space-1); letter-spacing: -0.01em;"
            >
              Dr. Sarah Chen
            </div>
            <div
              class="author-title"
              style="font-size: var(--text-sm); color: var(--text-secondary); margin-bottom: var(--space-3); font-weight: var(--weight-medium);"
            >
              Director of Training, Metro Health System
            </div>
            <div
              class="author-credentials"
              style="display: flex; gap: var(--space-2); flex-wrap: wrap;"
            >
              <span
                class="credential-badge"
                style="display: inline-flex; align-items: center; padding: var(--space-1) var(--space-2); background: var(--bg-level-1); color: var(--text-muted); border-radius: var(--radius-sm); font-size: var(--text-xs); font-weight: var(--weight-medium); border: 1px solid var(--border-subtle); transition: all var(--transition-fast);"
                >Licensed Therapist</span
              >
              <span
                class="credential-badge"
                style="display: inline-flex; align-items: center; padding: var(--space-1) var(--space-2); background: var(--bg-level-1); color: var(--text-muted); border-radius: var(--radius-sm); font-size: var(--text-xs); font-weight: var(--weight-medium); border: 1px solid var(--border-subtle); transition: all var(--transition-fast);"
                >10+ Years Experience</span
              >
            </div>
          </div>
        </div>
      </div>

      <!-- Enhanced Results Metrics with Enterprise Design -->
      <div class="results-showcase" style="animation: fadeInUp 0.8s ease-out;">
        <div
          class="glass-surface enterprise-card"
          style="background: var(--bg-glass); border: 1px solid var(--border-primary); border-radius: var(--radius-2xl); padding: var(--space-8); backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px); transition: all var(--transition-normal); position: relative; overflow: hidden;"
        >
          <!-- Enhanced gradient overlay -->
          <div
            style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, var(--accent-primary-subtle), var(--accent-blue-subtle)); opacity: 0.05; pointer-events: none;"
          >
          </div>
          <!-- Animated border accent -->
          <div
            style="position: absolute; top: 0; left: 0; right: 0; height: 2px; background: linear-gradient(90deg, transparent, var(--accent-primary), var(--accent-blue), transparent); opacity: 0.3; animation: borderGlow 4s ease-in-out infinite;"
          >
          </div>

          <div
            class="enterprise-card-header"
            style="position: relative; z-index: 1; margin-bottom: var(--space-6);"
          >
            <h3
              class="text-gradient"
              style="font-size: var(--text-xl); font-weight: var(--weight-bold); margin-bottom: var(--space-2); background: linear-gradient(135deg, var(--text-primary), var(--accent-primary), var(--accent-blue));"
            >
              Measurable Impact
            </h3>
            <p
              style="color: var(--text-secondary); font-size: var(--text-sm); margin-bottom: var(--space-6); font-weight: var(--weight-medium); max-width: 300px;"
            >
              Quantifiable results from our enterprise training platform
            </p>
          </div>

          <div
            class="metrics-grid"
            style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-4); margin-bottom: var(--space-8); perspective: 800px;"
          >
            <div
              class="metric-item"
              style="display: flex; align-items: center; gap: var(--space-3); padding: var(--space-4); background: var(--bg-level-1); border-radius: var(--radius-lg); border: 1px solid var(--border-primary); transition: all var(--transition-spring); position: relative; overflow: hidden; transform: translateZ(0);"
              onmouseover="this.style.transform='translateZ(10px) translateY(-2px)'"
              onmouseout="this.style.transform='translateZ(0) translateY(0)'"
            >
              <div
                class="metric-icon success"
                style="font-size: 1.5rem; width: 3rem; height: 3rem; display: flex; align-items: center; justify-content: center; border-radius: var(--radius-full); background: rgba(16, 185, 129, 0.1); color: var(--accent-primary); font-weight: var(--weight-bold); box-shadow: 0 0 10px rgba(16, 185, 129, 0.1); transition: all var(--transition-fast);"
              >
                ‚Üó
              </div>
              <div class="metric-content">
                <div
                  class="metric-value"
                  style="font-size: var(--text-xl); font-weight: var(--weight-bold); line-height: 1; margin-bottom: var(--space-1); color: var(--accent-primary);"
                >
                  40%
                </div>
                <div
                  class="metric-label"
                  style="font-size: var(--text-sm); color: var(--text-primary); font-weight: var(--weight-medium); margin-bottom: var(--space-1);"
                >
                  Faster Training
                </div>
                <div
                  class="metric-sublabel"
                  style="font-size: var(--text-xs); color: var(--text-muted); text-transform: lowercase;"
                >
                  vs traditional methods
                </div>
              </div>
            </div>

            <div
              class="metric-item"
              style="display: flex; align-items: center; gap: var(--space-3); padding: var(--space-4); background: var(--bg-level-1); border-radius: var(--radius-lg); border: 1px solid var(--border-primary); transition: all var(--transition-spring); position: relative; overflow: hidden; transform: translateZ(0);"
              onmouseover="this.style.transform='translateZ(10px) translateY(-2px)'"
              onmouseout="this.style.transform='translateZ(0) translateY(0)'"
            >
              <div
                class="metric-icon improvement"
                style="font-size: 1.5rem; width: 3rem; height: 3rem; display: flex; align-items: center; justify-content: center; border-radius: var(--radius-full); background: rgba(59, 130, 246, 0.1); color: var(--accent-blue); font-weight: var(--weight-bold); box-shadow: 0 0 10px rgba(59, 130, 246, 0.1); transition: all var(--transition-fast);"
              >
                üéØ
              </div>
              <div class="metric-content">
                <div
                  class="metric-value"
                  style="font-size: var(--text-xl); font-weight: var(--weight-bold); line-height: 1; margin-bottom: var(--space-1); color: var(--accent-blue);"
                >
                  85%
                </div>
                <div
                  class="metric-label"
                  style="font-size: var(--text-sm); color: var(--text-primary); font-weight: var(--weight-medium); margin-bottom: var(--space-1);"
                >
                  Patient Outcomes
                </div>
                <div
                  class="metric-sublabel"
                  style="font-size: var(--text-xs); color: var(--text-muted); text-transform: lowercase;"
                >
                  clinical effectiveness
                </div>
              </div>
            </div>

            <div
              class="metric-item"
              style="display: flex; align-items: center; gap: var(--space-3); padding: var(--space-4); background: var(--bg-level-1); border-radius: var(--radius-lg); border: 1px solid var(--border-primary); transition: all var(--transition-spring); position: relative; overflow: hidden; transform: translateZ(0);"
              onmouseover="this.style.transform='translateZ(10px) translateY(-2px)'"
              onmouseout="this.style.transform='translateZ(0) translateY(0)'"
            >
              <div
                class="metric-icon confidence"
                style="font-size: 1.5rem; width: 3rem; height: 3rem; display: flex; align-items: center; justify-content: center; border-radius: var(--radius-full); background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); font-weight: var(--weight-bold); box-shadow: 0 0 10px rgba(139, 92, 246, 0.1); transition: all var(--transition-fast);"
              >
                üí™
              </div>
              <div class="metric-content">
                <div
                  class="metric-value"
                  style="font-size: var(--text-xl); font-weight: var(--weight-bold); line-height: 1; margin-bottom: var(--space-1); color: var(--accent-purple);"
                >
                  92%
                </div>
                <div
                  class="metric-label"
                  style="font-size: var(--text-sm); color: var(--text-primary); font-weight: var(--weight-medium); margin-bottom: var(--space-1);"
                >
                  Therapist Confidence
                </div>
                <div
                  class="metric-sublabel"
                  style="font-size: var(--text-xs); color: var(--text-muted); text-transform: lowercase;"
                >
                  skill development
                </div>
              </div>
            </div>

            <div
              class="metric-item"
              style="display: flex; align-items: center; gap: var(--space-3); padding: var(--space-4); background: var(--bg-level-1); border-radius: var(--radius-lg); border: 1px solid var(--border-primary); transition: all var(--transition-spring); position: relative; overflow: hidden; transform: translateZ(0);"
              onmouseover="this.style.transform='translateZ(10px) translateY(-2px)'"
              onmouseout="this.style.transform='translateZ(0) translateY(0)'"
            >
              <div
                class="metric-icon efficiency"
                style="font-size: 1.5rem; width: 3rem; height: 3rem; display: flex; align-items: center; justify-content: center; border-radius: var(--radius-full); background: rgba(245, 158, 11, 0.1); color: var(--accent-orange); font-weight: var(--weight-bold); box-shadow: 0 0 10px rgba(245, 158, 11, 0.1); transition: all var(--transition-fast);"
              >
                üí∞
              </div>
              <div class="metric-content">
                <div
                  class="metric-value"
                  style="font-size: var(--text-xl); font-weight: var(--weight-bold); line-height: 1; margin-bottom: var(--space-1); color: var(--accent-orange);"
                >
                  60%
                </div>
                <div
                  class="metric-label"
                  style="font-size: var(--text-sm); color: var(--text-primary); font-weight: var(--weight-medium); margin-bottom: var(--space-1);"
                >
                  Cost Reduction
                </div>
                <div
                  class="metric-sublabel"
                  style="font-size: var(--text-xs); color: var(--text-muted); text-transform: lowercase;"
                >
                  operational efficiency
                </div>
              </div>
            </div>
          </div>

          <div
            class="enterprise-cta"
            style="position: relative; z-index: 1; text-align: center;"
          >
            <div
              style="display: flex; align-items: center; gap: var(--space-2); margin-bottom: var(--space-4); justify-content: center;"
            >
              <div
                style="width: 8px; height: 8px; background: var(--accent-primary); border-radius: 50%; animation: pulse 2s infinite;"
              >
              </div>
              <span
                style="font-size: var(--text-xs); color: var(--accent-primary); font-weight: var(--weight-medium); text-transform: uppercase; letter-spacing: 0.05em;"
              >
                LIVE PERFORMANCE DATA
              </span>
            </div>

            <div
              class="flex flex-col sm:flex-row gap-3"
              style="justify-content: center;"
            >
              <button
                class="btn-brutalist btn-brutalist--primary"
                style="padding: var(--space-3) var(--space-6); font-size: var(--text-sm); border-radius: var(--radius-lg); font-weight: var(--weight-medium); width: auto; min-width: 140px; transition: all var(--transition-spring);"
                onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 10px 20px rgba(16, 185, 129, 0.2)'"
                onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'"
              >
                VIEW CASE STUDIES
              </button>
              <button
                class="btn-brutalist btn-brutalist--secondary"
                style="padding: var(--space-3) var(--space-6); font-size: var(--text-sm); border-radius: var(--radius-lg); font-weight: var(--weight-medium); width: auto; min-width: 140px; transition: all var(--transition-spring);"
                onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 10px 20px rgba(255, 255, 255, 0.05)'"
                onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'"
              >
                SCHEDULE DEMO
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Enhanced CTA Section with Unified Dark Theme -->
