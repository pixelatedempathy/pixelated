---
import BaseLayout from '@/layouts/BaseLayout.astro'
import HeroSection from '@/components/ui/HeroSection.astro'
import FeaturesSection from '@/components/ui/FeaturesSection.astro'
import CTAButton from '@/components/ui/CTAButton.astro'
---

<style>
  @import url('/src/styles/index-responsive.css');
</style>

<BaseLayout
  title="AI-Powered Mental Health Training"
  description="Revolutionary AI simulation platform for mental health professionals. Experience immersive training scenarios and improve patient outcomes through cutting-edge technology."
  bgType="dark"
>
  <!-- Enhanced Hero Section - Brutalist + Corporate + Enterprise + Antfu -->
  <HeroSection />

  <!-- Enhanced Features Section - Unified Dark Theme Design -->
  <FeaturesSection />

  <!-- Enhanced Stats Section - Enterprise Glass Morphism -->
  <section
    class="elegant-surface enterprise-metrics"
    style="background: linear-gradient(135deg, var(--bg-primary), var(--bg-tertiary)); padding: var(--space-24) 0; position: relative; overflow: hidden; border-top: 1px solid var(--border-primary); border-bottom: 1px solid var(--border-primary);"
  >
    <!-- Background gradient elements - Antfu-inspired -->
    <div
      style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.03; background-image: radial-gradient(circle at 20% 20%, var(--accent-primary) 0%, transparent 60%), radial-gradient(circle at 80% 80%, var(--accent-blue) 0%, transparent 60%), radial-gradient(circle at 40% 70%, var(--accent-purple) 0%, transparent 70%);"
    >
    </div>

    <!-- Minimalist geometric pattern - Corporate aesthetic -->
    <div
      style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.02; background-image: linear-gradient(var(--border-subtle) 1px, transparent 1px), linear-gradient(90deg, var(--border-subtle) 1px, transparent 1px); background-size: 60px 60px; mix-blend-mode: overlay;"
    >
    </div>

    <!-- Subtle noise texture - Enterprise finish -->
    <div
      style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.01; background-image: url('data:image/svg+xml;utf8,<svg xmlns="
      http:
      www.w3.org
      2000
      svg"
      viewBox="0 0 400 400"
    >
      <filter id="noiseFilter"
        ><feTurbulence
          type="fractalNoise"
          baseFrequency="0.9"
          numOctaves="1"
          stitchTiles="stitch"></feTurbulence><feColorMatrix
          type="saturate"
          values="0"></feColorMatrix></filter
      ><rect
        width="100%"
        height="100%"
        filter="url(%23noiseFilter)"
        opacity="0.5"></rect>
    </div>'); mix-blend-mode: overlay;">
  </section>

  <div class="container-refined" style="position: relative; z-index: 1;">
    <div class="text-center" style="margin-bottom: var(--space-16);">
      <!-- Enhanced Enterprise Trust Badge - Brutalist + Corporate -->
      <div
        class="enterprise-trust-badge"
        style="margin: 0 auto var(--space-6); animation: fadeInUp 0.6s ease-out; display: inline-flex; align-items: center; gap: var(--space-2); padding: var(--space-2) var(--space-4); background: var(--accent-primary-subtle); border: 1px solid var(--accent-primary-muted); border-radius: var(--radius-full); backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px); position: relative; overflow: hidden;"
      >
        <!-- Animated trust indicator -->
        <div
          style="position: absolute; top: 0; left: -100%; width: 100%; height: 100%; background: linear-gradient(90deg, transparent, var(--accent-primary-muted), transparent); animation: trustSweep 3s ease-in-out infinite;"
        >
        </div>
        <svg
          width="16"
          height="16"
          fill="currentColor"
          viewBox="0 0 24 24"
          style="color: var(--accent-primary); position: relative; z-index: 1;"
        >
          <path
            d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
          ></path>
        </svg>
        <span
          style="color: var(--accent-primary); font-weight: var(--weight-semibold); text-transform: uppercase; letter-spacing: 0.05em; font-size: var(--text-xs); position: relative; z-index: 1;"
          >ENTERPRISE TRUST</span
        >
        <div
          style="width: 6px; height: 6px; background: var(--accent-primary); border-radius: 50%; animation: pulse 2s infinite; position: relative; z-index: 1;"
        >
        </div>
      </div>

      <h2
        class="heading-brutalist heading-brutalist--hero"
        style="margin-bottom: var(--space-6); animation: fadeInUp 0.8s ease-out; background: linear-gradient(135deg, var(--text-primary), var(--accent-primary), var(--accent-blue)); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; position: relative;"
      >
        TRUSTED BY PROFESSIONALS
        <!-- Subtle glow effect -->
        <div
          style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, var(--accent-primary), var(--accent-blue)); opacity: 0.1; filter: blur(20px); transform: scale(1.1); z-index: -1;"
        >
        </div>
      </h2>
      <p
        style="font-size: var(--text-xl); color: var(--text-secondary); animation: fadeInUp 1s ease-out; font-weight: var(--weight-medium); max-width: 600px; margin: 0 auto; line-height: 1.6;"
      >
        Leading healthcare institutions rely on our unified AI training platform
      </p>
    </div>

    <!-- Enhanced Stats Grid with Glass Morphism and Corporate Styling -->
    <div
      class="grid-brutalist grid-brutalist--4"
      style="gap: var(--space-8); perspective: 1000px;"
    >
      <div
        class="glass-surface card-brutalist stats-card primary"
        style="padding: var(--space-8); animation: fadeInUp 0.6s ease-out; transform: translateZ(0); transition: all var(--transition-spring); border: 1px solid var(--border-primary); position: relative; overflow: hidden;"
        onmouseover="this.style.transform='translateZ(20px) translateY(-4px)'"
        onmouseout="this.style.transform='translateZ(0) translateY(0)'"
      >
        <!-- Animated background accent -->
        <div
          style="position: absolute; top: 0; left: 0; right: 0; height: 1px; background: linear-gradient(90deg, transparent, var(--accent-primary), transparent); opacity: 0.3; transition: opacity var(--transition-normal);"
        >
        </div>
        <!-- Subtle gradient overlay -->
        <div
          style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, var(--accent-primary-subtle), transparent); opacity: 0.1; pointer-events: none;"
        >
        </div>
        <div class="stats-header">
          <div
            class="stats-icon primary-icon"
            style="font-size: 2.5rem; background: linear-gradient(135deg, var(--accent-primary), var(--accent-primary-hover)); box-shadow: 0 0 20px rgba(16, 185, 129, 0.3);"
          >
            üè•
          </div>
        </div>
        <div class="text-center" style="margin-top: var(--space-4);">
          <div
            class="heading-brutalist text-gradient stats-number"
            style="font-size: 3.5rem; margin-bottom: var(--space-2); background: linear-gradient(135deg, var(--text-primary), var(--accent-primary), var(--accent-primary-hover));"
          >
            500+
          </div>
          <div
            class="stats-label"
            style="font-size: var(--text-sm); font-weight: var(--weight-semibold); letter-spacing: 0.05em;"
          >
            Healthcare Institutions
          </div>
        </div>
        <div
          class="stats-accent primary-accent"
          style="background: linear-gradient(90deg, transparent, var(--accent-primary), transparent); height: 1px; opacity: 0.4; margin-top: var(--space-4);"
        >
        </div>
      </div>

      <div
        class="glass-surface card-brutalist stats-card blue"
        style="padding: var(--space-8); animation: fadeInUp 0.8s ease-out; transform: translateZ(0); transition: all var(--transition-spring); border: 1px solid var(--border-primary); position: relative; overflow: hidden;"
        onmouseover="this.style.transform='translateZ(20px) translateY(-4px)'"
        onmouseout="this.style.transform='translateZ(0) translateY(0)'"
      >
        <!-- Animated background accent -->
        <div
          style="position: absolute; top: 0; left: 0; right: 0; height: 1px; background: linear-gradient(90deg, transparent, var(--accent-blue), transparent); opacity: 0.3; transition: opacity var(--transition-normal);"
        >
        </div>
        <!-- Subtle gradient overlay -->
        <div
          style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, var(--accent-blue-subtle, rgba(59, 130, 246, 0.1)), transparent); opacity: 0.1; pointer-events: none;"
        >
        </div>
        <div class="stats-header">
          <div
            class="stats-icon blue-icon"
            style="font-size: 2.5rem; background: linear-gradient(135deg, var(--accent-blue), var(--accent-purple)); box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);"
          >
            üë®‚Äç‚öïÔ∏è
          </div>
        </div>
        <div class="text-center" style="margin-top: var(--space-4);">
          <div
            class="heading-brutalist text-gradient stats-number"
            style="font-size: 3.5rem; margin-bottom: var(--space-2); background: linear-gradient(135deg, var(--text-primary), var(--accent-blue), var(--accent-purple));"
          >
            15K+
          </div>
          <div
            class="stats-label"
            style="font-size: var(--text-sm); font-weight: var(--weight-semibold); letter-spacing: 0.05em;"
          >
            Trained Professionals
          </div>
        </div>
        <div
          class="stats-accent blue-accent"
          style="background: linear-gradient(90deg, transparent, var(--accent-blue), transparent); height: 1px; opacity: 0.4; margin-top: var(--space-4);"
        >
        </div>
      </div>

      <div
        class="glass-surface card-brutalist stats-card purple"
        style="padding: var(--space-8); animation: fadeInUp 1s ease-out; transform: translateZ(0); transition: all var(--transition-spring); border: 1px solid var(--border-primary); position: relative; overflow: hidden;"
        onmouseover="this.style.transform='translateZ(20px) translateY(-4px)'"
        onmouseout="this.style.transform='translateZ(0) translateY(0)'"
      >
        <!-- Animated background accent -->
        <div
          style="position: absolute; top: 0; left: 0; right: 0; height: 1px; background: linear-gradient(90deg, transparent, var(--accent-purple), transparent); opacity: 0.3; transition: opacity var(--transition-normal);"
        >
        </div>
        <!-- Subtle gradient overlay -->
        <div
          style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, var(--accent-purple-subtle, rgba(139, 92, 246, 0.1)), transparent); opacity: 0.1; pointer-events: none;"
        >
        </div>
        <div class="stats-header">
          <div
            class="stats-icon purple-icon"
            style="font-size: 2.5rem; background: linear-gradient(135deg, var(--accent-purple), var(--accent-orange)); box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);"
          >
            ‚≠ê
          </div>
        </div>
        <div class="text-center" style="margin-top: var(--space-4);">
          <div
            class="heading-brutalist text-gradient stats-number"
            style="font-size: 3.5rem; margin-bottom: var(--space-2); background: linear-gradient(135deg, var(--text-primary), var(--accent-purple), var(--accent-orange));"
          >
            98%
          </div>
          <div
            class="stats-label"
            style="font-size: var(--text-sm); font-weight: var(--weight-semibold); letter-spacing: 0.05em;"
          >
            Satisfaction Rate
          </div>
        </div>
        <div
          class="stats-accent purple-accent"
          style="background: linear-gradient(90deg, transparent, var(--accent-purple), transparent); height: 1px; opacity: 0.4; margin-top: var(--space-4);"
        >
        </div>
      </div>

      <div
        class="glass-surface card-brutalist stats-card green"
        style="padding: var(--space-8); animation: fadeInUp 1.2s ease-out; transform: translateZ(0); transition: all var(--transition-spring); border: 1px solid var(--border-primary); position: relative; overflow: hidden;"
        onmouseover="this.style.transform='translateZ(20px) translateY(-4px)'"
        onmouseout="this.style.transform='translateZ(0) translateY(0)'"
      >
        <!-- Animated background accent -->
        <div
          style="position: absolute; top: 0; left: 0; right: 0; height: 1px; background: linear-gradient(90deg, transparent, var(--accent-primary), transparent); opacity: 0.3; transition: opacity var(--transition-normal);"
        >
        </div>
        <!-- Subtle gradient overlay -->
        <div
          style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, var(--accent-primary-subtle), transparent); opacity: 0.1; pointer-events: none;"
        >
        </div>
        <div class="stats-header">
          <div
            class="stats-icon green-icon"
            style="font-size: 2.5rem; background: linear-gradient(135deg, var(--accent-primary), var(--accent-green, #22c55e)); box-shadow: 0 0 20px rgba(16, 185, 129, 0.3);"
          >
            üïê
          </div>
        </div>
        <div class="text-center" style="margin-top: var(--space-4);">
          <div
            class="heading-brutalist text-gradient stats-number"
            style="font-size: 3.5rem; margin-bottom: var(--space-2); background: linear-gradient(135deg, var(--text-primary), var(--accent-primary), var(--accent-green, #22c55e));"
          >
            24/7
          </div>
          <div
            class="stats-label"
            style="font-size: var(--text-sm); font-weight: var(--weight-semibold); letter-spacing: 0.05em;"
          >
            Platform Availability
          </div>
        </div>
        <div
          class="stats-accent green-accent"
          style="background: linear-gradient(90deg, transparent, var(--accent-primary), transparent); height: 1px; opacity: 0.4; margin-top: var(--space-4);"
        >
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<!-- Enhanced Testimonial Section with Corporate and Enterprise Aesthetic -->
<section
  class="testimonial-section elegant-surface"
  style="background: linear-gradient(135deg, var(--bg-secondary), var(--bg-elevated)); padding: var(--space-24) 0; position: relative; overflow: hidden; border-top: 1px solid var(--border-primary);"
>
  <!-- Antfu-inspired background elements -->
  <div
    style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.03; background-image: radial-gradient(circle at 30% 30%, var(--accent-primary-subtle) 0%, transparent 70%), radial-gradient(circle at 70% 70%, var(--accent-blue-subtle) 0%, transparent 70%); mix-blend-mode: overlay;"
  >
  </div>

  <!-- Subtle grid pattern - Corporate aesthetic -->
  <div
    style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.02; background-image: linear-gradient(var(--border-muted) 1px, transparent 1px), linear-gradient(90deg, var(--border-muted) 1px, transparent 1px); background-size: 80px 80px; mix-blend-mode: overlay;"
  >
  </div>

  <div class="container-refined">
    <div
      class="testimonial-grid"
      style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--space-16); align-items: center;"
    >
      <div
        class="testimonial-content"
        style="animation: fadeInUp 0.6s ease-out;"
      >
        <!-- Enhanced Professional Testimonial Badge -->
        <div
          class="testimonial-badge"
          style="margin-bottom: var(--space-6); display: inline-flex; align-items: center; gap: var(--space-2); padding: var(--space-2) var(--space-4); background: linear-gradient(135deg, var(--accent-blue-subtle), var(--accent-primary-subtle)); border: 1px solid rgba(59, 130, 246, 0.2); border-radius: var(--radius-full); backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px); position: relative;"
        >
          <svg
            width="14"
            height="14"
            fill="currentColor"
            viewBox="0 0 24 24"
            style="color: var(--accent-blue); position: relative; z-index: 1;"
          >
            <path
              d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"
            ></path>
          </svg>
          <span
            style="color: var(--accent-blue); font-weight: var(--weight-semibold); text-transform: uppercase; letter-spacing: 0.05em; font-size: var(--text-xs); position: relative; z-index: 1;"
            >PROFESSIONAL TESTIMONIAL</span
          >
        </div>

        <blockquote
          class="testimonial-quote"
          style="font-size: var(--text-3xl); line-height: 1.4; color: var(--text-primary); margin-bottom: var(--space-8); font-style: italic; font-weight: var(--weight-light); position: relative; padding-left: var(--space-6); background: linear-gradient(135deg, var(--text-primary), var(--text-secondary)); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;"
        >
          "This platform has revolutionized how we train our therapists. The AI
          scenarios are incredibly realistic and the analytics provide
          invaluable insights that directly improve patient outcomes."
          <!-- Enhanced quote decoration -->
          <div
            style="position: absolute; left: 0; top: 0; font-size: 4rem; color: var(--accent-primary); opacity: 0.3; font-weight: var(--weight-bold); line-height: 1; transform: translateY(-0.5rem);"
          >
            "
          </div>
        </blockquote>

        <div
          class="testimonial-author"
          style="display: flex; align-items: center; gap: var(--space-4); margin-bottom: var(--space-6);"
        >
          <div
            class="author-avatar"
            style="width: 4.5rem; height: 4.5rem; background: linear-gradient(135deg, var(--accent-primary), var(--accent-primary-hover)); border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0; font-weight: var(--weight-bold); color: var(--bg-void); font-size: var(--text-lg); box-shadow: var(--shadow-lg), 0 0 20px rgba(16, 185, 129, 0.2); border: 2px solid var(--accent-primary-muted);"
          >
            <span>DR</span>
          </div>
          <div class="author-info">
            <div
              class="author-name"
              style="font-weight: var(--weight-semibold); color: var(--text-primary); font-size: var(--text-lg); margin-bottom: var(--space-1); letter-spacing: -0.01em;"
            >
              Dr. Sarah Chen
            </div>
            <div
              class="author-title"
              style="font-size: var(--text-sm); color: var(--text-secondary); margin-bottom: var(--space-3); font-weight: var(--weight-medium);"
            >
              Director of Training, Metro Health System
            </div>
            <div
              class="author-credentials"
              style="display: flex; gap: var(--space-2); flex-wrap: wrap;"
            >
              <span
                class="credential-badge"
                style="display: inline-flex; align-items: center; padding: var(--space-1) var(--space-2); background: var(--bg-level-1); color: var(--text-muted); border-radius: var(--radius-sm); font-size: var(--text-xs); font-weight: var(--weight-medium); border: 1px solid var(--border-subtle); transition: all var(--transition-fast);"
                >Licensed Therapist</span
              >
              <span
                class="credential-badge"
                style="display: inline-flex; align-items: center; padding: var(--space-1) var(--space-2); background: var(--bg-level-1); color: var(--text-muted); border-radius: var(--radius-sm); font-size: var(--text-xs); font-weight: var(--weight-medium); border: 1px solid var(--border-subtle); transition: all var(--transition-fast);"
                >10+ Years Experience</span
              >
            </div>
          </div>
        </div>
      </div>

      <!-- Enhanced Results Metrics with Enterprise Design -->
      <div class="results-showcase" style="animation: fadeInUp 0.8s ease-out;">
        <div
          class="glass-surface enterprise-card"
          style="background: var(--bg-glass); border: 1px solid var(--border-primary); border-radius: var(--radius-2xl); padding: var(--space-8); backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px); transition: all var(--transition-normal); position: relative; overflow: hidden;"
        >
          <!-- Enhanced gradient overlay -->
          <div
            style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, var(--accent-primary-subtle), var(--accent-blue-subtle)); opacity: 0.05; pointer-events: none;"
          >
          </div>
          <!-- Animated border accent -->
          <div
            style="position: absolute; top: 0; left: 0; right: 0; height: 2px; background: linear-gradient(90deg, transparent, var(--accent-primary), var(--accent-blue), transparent); opacity: 0.3; animation: borderGlow 4s ease-in-out infinite;"
          >
          </div>

          <div
            class="enterprise-card-header"
            style="position: relative; z-index: 1; margin-bottom: var(--space-6);"
          >
            <h3
              class="text-gradient"
              style="font-size: var(--text-xl); font-weight: var(--weight-bold); margin-bottom: var(--space-2); background: linear-gradient(135deg, var(--text-primary), var(--accent-primary), var(--accent-blue));"
            >
              Measurable Impact
            </h3>
            <p
              style="color: var(--text-secondary); font-size: var(--text-sm); margin-bottom: var(--space-6); font-weight: var(--weight-medium); max-width: 300px;"
            >
              Quantifiable results from our enterprise training platform
            </p>
          </div>

          <div
            class="metrics-grid"
            style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-4); margin-bottom: var(--space-8); perspective: 800px;"
          >
            <div
              class="metric-item"
              style="display: flex; align-items: center; gap: var(--space-3); padding: var(--space-4); background: var(--bg-level-1); border-radius: var(--radius-lg); border: 1px solid var(--border-primary); transition: all var(--transition-spring); position: relative; overflow: hidden; transform: translateZ(0);"
              onmouseover="this.style.transform='translateZ(10px) translateY(-2px)'"
              onmouseout="this.style.transform='translateZ(0) translateY(0)'"
            >
              <div
                class="metric-icon success"
                style="font-size: 1.5rem; width: 3rem; height: 3rem; display: flex; align-items: center; justify-content: center; border-radius: var(--radius-full); background: rgba(16, 185, 129, 0.1); color: var(--accent-primary); font-weight: var(--weight-bold); box-shadow: 0 0 10px rgba(16, 185, 129, 0.1); transition: all var(--transition-fast);"
              >
                ‚Üó
              </div>
              <div class="metric-content">
                <div
                  class="metric-value"
                  style="font-size: var(--text-xl); font-weight: var(--weight-bold); line-height: 1; margin-bottom: var(--space-1); color: var(--accent-primary);"
                >
                  40%
                </div>
                <div
                  class="metric-label"
                  style="font-size: var(--text-sm); color: var(--text-primary); font-weight: var(--weight-medium); margin-bottom: var(--space-1);"
                >
                  Faster Training
                </div>
                <div
                  class="metric-sublabel"
                  style="font-size: var(--text-xs); color: var(--text-muted); text-transform: lowercase;"
                >
                  vs traditional methods
                </div>
              </div>
            </div>

            <div
              class="metric-item"
              style="display: flex; align-items: center; gap: var(--space-3); padding: var(--space-4); background: var(--bg-level-1); border-radius: var(--radius-lg); border: 1px solid var(--border-primary); transition: all var(--transition-spring); position: relative; overflow: hidden; transform: translateZ(0);"
              onmouseover="this.style.transform='translateZ(10px) translateY(-2px)'"
              onmouseout="this.style.transform='translateZ(0) translateY(0)'"
            >
