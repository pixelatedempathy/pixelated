{
  "standard": "WCAG2AA",
  "includeNotices": false,
  "includeWarnings": true,
  "ignore": [
    "notice",
    "WCAG2AA.Principle1.Guideline1_3.1_3_1.H42.2"
  ],
  "hideElements": ".skip-link",
  "rules": [
    "color-contrast",
    "keyboard",
    "forms",
