---
// Tip component for displaying helpful tips
export interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<div class={`tip-box ${className || ''}`}>
  <div class="tip-icon">
    <svg
      width="16"
      height="16"
      viewBox="0 0 16 16"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M8 1.5c-2.363 0-4 1.69-4 3.75 0 .984.424 1.625.984 2.304l.214.253c.223.264.47.556.673.848.284.411.537.896.621 1.49a.75.75 0 0 1-1.484.211c-.04-.282-.163-.547-.37-.847a8.695 8.695 0 0 0-.542-.68c-.084-.1-.173-.205-.268-.32C3.201 7.75 2.5 6.766 2.5 5.25 2.5 2.31 4.863 0 8 0s5.5 2.31 5.5 5.25c0 1.516-.701 2.5-1.328 3.259-.095.115-.184.22-.268.319-.207.245-.383.453-.541.681-.208.3-.33.565-.37.847a.75.75 0 0 1-1.485-.212c.084-.593.337-1.078.621-1.489.203-.292.45-.584.673-.848.075-.088.147-.173.213-.253.561-.679.985-1.32.985-2.304 0-2.06-1.637-3.75-4-3.75ZM5.75 12h4.5a.75.75 0 0 1 0 1.5h-4.5a.75.75 0 0 1 0-1.5ZM6 15.25a.75.75 0 0 1 .75-.75h2.5a.75.75 0 0 1 0 1.5h-2.5a.75.75 0 0 1-.75-.75Z"
        fill="currentColor"></path>
    </svg>
  </div>
  <div class="tip-content">
    <slot />
  </div>
</div>

<style>
  .tip-box {
    @apply flex items-start gap-3 p-4 bg-green-50 border border-green-200 rounded-lg text-green-900 dark:bg-green-900/20 dark:border-green-800 dark:text-green-100;
  }

  .tip-icon {
    @apply flex-shrink-0 text-green-600 dark:text-green-400;
  }

  .tip-content {
    @apply flex-1 text-sm;
  }

  .tip-content :global(p:first-child) {
    @apply mt-0;
  }

  .tip-content :global(p:last-child) {
    @apply mb-0;
  }
</style>
