init:
	@echo "Initializing workflow..."
	@python3 -c "import sqlite3, os; db=os.path.expanduser('$(abspath state.db)'); open(db, 'a').close(); print('DB ready')"
	@echo "Loading sample data..."
	@cp sample_data/annotations.json . && echo "Sample data copied."

run:
	@echo "Running workflow..."
	@python3 worker.py

kappa:
	@echo "Computing Kappa..."
	@python3 worker.py kappa

serve-dashboard:
	@echo "Serving dashboard (requires dashboard/index.html generated by worker)..."
	@python3 -m http.server 8000 --directory dashboard