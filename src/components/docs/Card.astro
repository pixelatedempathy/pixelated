---
// Card component
export interface Props {
  title: string
  icon?: string
  href: string
}
---

<a
  href={Astro.props.href}
  class="card block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50 transition-colors dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
>
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
    {Astro.props.title}
  </h3>
  <p class="text-gray-600 dark:text-gray-400 text-sm">
    <slot />
  </p>
</a>
