---
import BaseLayout from '@/layouts/BaseLayout.astro'
import PipelineOverview from '../../components/demo/PipelineOverview.tsx'
import KnowledgeParsingDemo from '../../components/demo/KnowledgeParsingDemo.tsx'
import ScenarioGenerationDemo from '../../components/demo/ScenarioGenerationDemo.tsx'
import Card from '@/components/ui/Card.astro'
import CardContent from '@/components/ui/CardContent.astro'
import CardDescription from '@/components/ui/CardDescription.astro'
import CardHeader from '@/components/ui/CardHeader.astro'
import CardTitle from '@/components/ui/CardTitle.astro'
import Badge from '@/components/ui/Badge.astro'
---

<BaseLayout
  title="Psychology Pipeline Demo"
  description="Advanced AI-powered psychology pipeline demonstration featuring clinical knowledge parsing, therapeutic scenario generation, and comprehensive mental health analysis tools."
  bgType="plum"
>
  <div class="min-h-screen text-white py-8">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-12">
        <div class="mb-6">
          <Badge
            class="inline-flex items-center gap-2 px-4 py-2 text-sm bg-cyan-500/20 border border-cyan-400/40 text-cyan-200 rounded-full"
          >
            <span class="relative flex h-3 w-3">
              <span
                class="animate-pulse absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"
              ></span>
              <span
                class="relative inline-flex rounded-full h-3 w-3 bg-cyan-500"
              ></span>
            </span>
            Live Demo Active
          </Badge>
        </div>
        <h1 class="text-4xl lg:text-5xl font-bold mb-6">
          Psychology Pipeline
          <span class="text-cyan-400 block mt-2"
            >AI-Powered Clinical Analysis</span
          >
        </h1>
        <p class="text-lg text-slate-300 max-w-3xl mx-auto">
          Experience cutting-edge artificial intelligence in clinical psychology
          with real-time knowledge parsing, therapeutic scenario generation, and
          comprehensive mental health analysis tools.
        </p>
      </div>

      <!-- Features Overview -->
      <div class="grid md:grid-cols-3 gap-8 mb-12">
        <Card class="border border-blue-600/30 bg-slate-800/50 backdrop-blur">
          <CardHeader>
            <div class="text-4xl mb-3">ðŸ§ </div>
            <CardTitle class="text-blue-100">Knowledge Parsing</CardTitle>
          </CardHeader>
          <CardContent>
            <CardDescription class="text-blue-200/80">
              Advanced entity extraction and concept analysis for psychological
              and therapeutic content with real-time confidence scoring.
            </CardDescription>
            <div class="mt-4 space-y-2">
              <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 bg-blue-400 rounded-full"></span>
                <span>Mental health condition detection</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 bg-blue-400 rounded-full"></span>
                <span>Therapeutic technique identification</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 bg-blue-400 rounded-full"></span>
                <span>Risk assessment & analysis</span>
              </div>
            </div>
          </CardContent>
        </Card>

        <Card class="border border-orange-600/30 bg-slate-800/50 backdrop-blur">
          <CardHeader>
            <div class="text-4xl mb-3">ðŸ“‹</div>
            <CardTitle class="text-orange-100">Scenario Generation</CardTitle>
          </CardHeader>
          <CardContent>
            <CardDescription class="text-orange-200/80">
              Create comprehensive therapeutic scenarios with detailed client
              profiles, clinical formulations, and treatment plans.
            </CardDescription>
            <div class="mt-4 space-y-2">
              <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 bg-orange-400 rounded-full"></span>
                <span>Dynamic client profile creation</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 bg-orange-400 rounded-full"></span>
                <span>Clinical formulation generation</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 bg-orange-400 rounded-full"></span>
                <span>Treatment plan development</span>
              </div>
            </div>
          </CardContent>
        </Card>

        <Card class="border border-green-600/30 bg-slate-800/50 backdrop-blur">
          <CardHeader>
            <div class="text-4xl mb-3">ðŸ“Š</div>
            <CardTitle class="text-green-100">Analytics & Insights</CardTitle>
          </CardHeader>
          <CardContent>
            <CardDescription class="text-green-200/80">
              Comprehensive analysis with detailed metadata, confidence scoring,
              and clinical relevance metrics for informed decision-making.
            </CardDescription>
            <div class="mt-4 space-y-2">
              <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 bg-green-400 rounded-full"></span>
                <span>Real-time confidence scoring</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 bg-green-400 rounded-full"></span>
                <span>Performance metrics tracking</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <span class="w-2 h-2 bg-green-400 rounded-full"></span>
                <span>Clinical relevance assessment</span>
              </div>
            </div>
          </CardContent>
        </Card>
      </div>

      <!-- Pipeline Overview Section -->
      <Card
        class="border border-slate-600/30 bg-slate-800/50 backdrop-blur mb-12"
      >
        <CardHeader>
          <CardTitle class="text-slate-100 text-2xl"
            >Pipeline Architecture Overview</CardTitle
          >
          <CardDescription class="text-slate-300">
            Understand the sophisticated workflow that powers our AI-driven
            clinical analysis system.
          </CardDescription>
        </CardHeader>
        <CardContent>
          <PipelineOverview client:load />
        </CardContent>
      </Card>

      <!-- Knowledge Parsing Demo Section -->
      <Card
        class="border border-slate-600/30 bg-slate-800/50 backdrop-blur mb-12"
      >
        <CardHeader>
          <CardTitle class="text-slate-100 text-2xl"
            >Clinical Knowledge Parsing Demo</CardTitle
          >
          <CardDescription class="text-slate-300">
            Experience real-time entity extraction and concept analysis for
            psychological and therapeutic content.
          </CardDescription>
        </CardHeader>
        <CardContent>
          <KnowledgeParsingDemo client:load />
        </CardContent>
      </Card>

      <!-- Scenario Generation Demo Section -->
      <Card
        class="border border-slate-600/30 bg-slate-800/50 backdrop-blur mb-12"
      >
        <CardHeader>
          <CardTitle class="text-slate-100 text-2xl"
            >Therapeutic Scenario Generation Demo</CardTitle
          >
          <CardDescription class="text-slate-300">
            Create comprehensive clinical cases with detailed formulations and
            evidence-based treatment plans.
          </CardDescription>
        </CardHeader>
        <CardContent>
          <ScenarioGenerationDemo client:load />
        </CardContent>
      </Card>

      <!-- Technical Specifications -->
      <Card class="border border-slate-600/30 bg-slate-800/50 backdrop-blur">
        <CardHeader>
          <CardTitle class="text-slate-100 text-xl"
            >Technical Specifications</CardTitle
          >
          <CardDescription class="text-slate-300">
            Performance metrics and system capabilities of the psychology
            pipeline.
          </CardDescription>
        </CardHeader>
        <CardContent>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="text-center p-4 bg-slate-700/50 rounded-lg">
              <div class="text-2xl font-bold text-blue-400">{'< 500ms'}</div>
              <div class="text-sm text-slate-400">Average Response Time</div>
            </div>
            <div class="text-center p-4 bg-slate-700/50 rounded-lg">
              <div class="text-2xl font-bold text-green-400">94.7%</div>
              <div class="text-sm text-slate-400">
                Clinical Entity Recognition
              </div>
            </div>
            <div class="text-center p-4 bg-slate-700/50 rounded-lg">
              <div class="text-2xl font-bold text-orange-400">50k+</div>
              <div class="text-sm text-slate-400">Training Case Studies</div>
            </div>
            <div class="text-center p-4 bg-slate-700/50 rounded-lg">
              <div class="text-2xl font-bold text-yellow-400">HIPAA</div>
              <div class="text-sm text-slate-400">Compliant Encryption</div>
            </div>
            <div class="text-center p-4 bg-slate-700/50 rounded-lg">
              <div class="text-2xl font-bold text-red-400">10k+</div>
              <div class="text-sm text-slate-400">Concurrent Analyses</div>
            </div>
            <div class="text-center p-4 bg-slate-700/50 rounded-lg">
              <div class="text-2xl font-bold text-cyan-400">REST</div>
              <div class="text-sm text-slate-400">API with Webhooks</div>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>
  </div>
</BaseLayout>
