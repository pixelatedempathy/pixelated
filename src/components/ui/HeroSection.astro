---
// Mizu-inspired Clean Hero Section
export interface Props {
  title?: string
  subtitle?: string
  description?: string
  ctaPrimary?: { text: string; href: string }
  ctaSecondary?: { text: string; href: string }
}

const {
  title = 'PIXELATED EMPATHY',
  subtitle = 'AI-Powered Mental Health Training',
  description = 'Revolutionary AI simulation platform for mental health professionals. Experience immersive training scenarios, develop advanced therapeutic skills, and improve patient outcomes through cutting-edge technology.',
  ctaPrimary = { text: 'START TRAINING', href: '/demo-hub' },
  ctaSecondary = { text: 'LEARN MORE', href: '/features' },
} = Astro.props
---

<section class="hero-section">
  <div class="container-refined hero-container">
    <div class="hero-grid">
      <!-- Content Side -->
      <div class="hero-content">
        <!-- Badge -->
        <div class="hero-badge">
          <svg width="12" height="12" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
            ></path>
          </svg>
          <span>NEXT-GEN AI TRAINING</span>
        </div>

        <!-- Main Heading -->
        <div class="hero-heading">
          <h1 class="hero-title">{title}</h1>
          <p class="hero-subtitle">{subtitle}</p>
        </div>

        <!-- Description -->
        <p class="hero-description">{description}</p>

        <!-- Stats Row -->
        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-number">10K+</div>
            <div class="stat-label">Training Sessions</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">95%</div>
            <div class="stat-label">Accuracy Rate</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Availability</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="hero-cta">
          <a href={ctaPrimary.href} class="btn-primary">
            {ctaPrimary.text}
            <svg
              width="20"
              height="20"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href={ctaSecondary.href} class="btn-secondary">
            {ctaSecondary.text}
          </a>
        </div>
      </div>

      <!-- Visual Side -->
      <div class="hero-visual">
        <div class="hero-card">
          <div class="hero-card-header">
            <span class="hero-card-badge">AI SIMULATION</span>
            <div class="hero-card-indicator"></div>
          </div>

          <!-- Simulated Chat Interface -->
          <div class="hero-chat">
            <div class="chat-message chat-ai">
              <div class="chat-avatar chat-avatar-ai">AI</div>
              <div class="chat-content">
                <p>
                  How are you feeling today? I notice you seem a bit stressed...
                </p>
                <div class="chat-meta">
                  <span>Confidence: 94%</span>
                  <span class="dot"></span>
                  <span>Empathy Score: 8.7</span>
                </div>
              </div>
            </div>

            <div class="chat-message chat-user">
              <div class="chat-avatar chat-avatar-user">U</div>
              <div class="chat-content">
                <p>
                  I've been having trouble sleeping and feeling anxious about
                  work...
                </p>
                <div class="chat-status">
                  <span>PROCESSING RESPONSE</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Analytics Bar -->
          <div class="hero-analytics">
            <div class="analytics-header">
              <span>Session Analytics</span>
              <span class="analytics-live">LIVE</span>
            </div>
            <div class="analytics-grid">
              <div class="analytics-item">
                <div class="analytics-value analytics-primary">92%</div>
                <div class="analytics-label">Engagement</div>
              </div>
              <div class="analytics-item">
                <div class="analytics-value analytics-blue">8.4</div>
                <div class="analytics-label">Empathy</div>
              </div>
              <div class="analytics-item">
                <div class="analytics-value analytics-purple">A+</div>
                <div class="analytics-label">Grade</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Mizu-inspired Clean Hero Section */
  .hero-section {
    padding: var(--space-24) 0;
    background: var(--bg-primary);
    position: relative;
  }

  .hero-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
    min-height: 80vh;
  }

  @media (max-width: 768px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: var(--space-12);
      min-height: auto;
      padding: var(--space-12) 0;
    }
  }

  /* Content Side */
  .hero-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.2);
    border-radius: var(--radius-full);
    color: var(--accent-primary);
    font-size: var(--text-xs);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    width: fit-content;
  }

  .hero-heading {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: var(--weight-black);
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    margin: 0;
  }

  .hero-subtitle {
    font-size: var(--text-2xl);
    font-weight: var(--weight-semibold);
    color: var(--accent-primary);
    margin: 0;
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 540px;
    margin: 0;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    margin: var(--space-8) 0;
  }

  @media (max-width: 640px) {
    .hero-stats {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: var(--text-3xl);
    font-weight: var(--weight-bold);
    line-height: 1;
    color: var(--accent-primary);
    margin-bottom: var(--space-1);
  }

  .stat-label {
    font-size: var(--text-sm);
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-cta {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
    margin-top: var(--space-4);
  }

  .btn-primary,
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-8);
    font-size: var(--text-base);
    font-weight: var(--weight-semibold);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .btn-primary {
    background: var(--accent-primary);
    color: var(--bg-void);
    border: 1px solid var(--accent-primary);
  }

  .btn-primary:hover {
    background: var(--accent-primary-hover);
    transform: translateY(-1px);
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--border-primary);
  }

  .btn-secondary:hover {
    background: var(--bg-level-1);
    border-color: var(--accent-primary);
    color: var(--accent-primary);
  }

  /* Visual Side */
  .hero-visual {
    position: relative;
  }

  .hero-card {
    background: rgba(15, 15, 15, 0.8);
    backdrop-filter: blur(20px);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    position: relative;
  }

  .hero-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-6);
  }

  .hero-card-badge {
    padding: var(--space-1) var(--space-3);
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.2);
    border-radius: var(--radius-md);
    color: var(--accent-primary);
    font-size: var(--text-xs);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
  }

  .hero-card-indicator {
    width: 8px;
    height: 8px;
    background: var(--accent-primary);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .hero-chat {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .chat-message {
    display: flex;
    gap: var(--space-3);
  }

  .chat-avatar {
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-xs);
    font-weight: var(--weight-bold);
    flex-shrink: 0;
  }

  .chat-avatar-ai {
    background: var(--accent-blue);
    color: white;
  }

  .chat-avatar-user {
    background: var(--accent-primary);
    color: var(--bg-void);
  }

  .chat-content {
    flex: 1;
  }

  .chat-content p {
    font-size: var(--text-sm);
    color: var(--text-primary);
    margin: 0 0 var(--space-2) 0;
    line-height: 1.5;
  }

  .chat-meta,
  .chat-status {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    color: var(--text-muted);
  }

  .dot {
    width: 4px;
    height: 4px;
    background: var(--accent-primary);
    border-radius: 50%;
  }

  .chat-status span {
    padding: var(--space-1) var(--space-2);
    background: rgba(16, 185, 129, 0.1);
    border-radius: var(--radius-sm);
    color: var(--accent-primary);
    font-weight: var(--weight-medium);
    text-transform: uppercase;
    font-size: 10px;
  }

  .hero-analytics {
    padding: var(--space-4);
    background: var(--bg-level-1);
    border-radius: var(--radius-lg);
  }

  .analytics-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-4);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .analytics-header span:first-child {
    color: var(--text-muted);
  }

  .analytics-live {
    color: var(--accent-primary);
    font-weight: var(--weight-semibold);
  }

  .analytics-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
  }

  .analytics-item {
    text-align: center;
  }

  .analytics-value {
    font-size: var(--text-lg);
    font-weight: var(--weight-bold);
    line-height: 1;
    margin-bottom: var(--space-1);
  }

  .analytics-primary {
    color: var(--accent-primary);
  }

  .analytics-blue {
    color: var(--accent-blue);
  }

  .analytics-purple {
    color: var(--accent-purple);
  }

  .analytics-label {
    font-size: var(--text-xs);
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .hero-card {
      margin-top: var(--space-6);
    }
  }
</style>
