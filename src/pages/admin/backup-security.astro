---
export const prerender = false
// Frontmatter section (add imports and scripts here)
import AdminLayout from '../../components/admin/AdminLayout.astro'
import BackupSecurityManager from '../../components/admin/BackupSecurityManager.astro'

// Page metadata
const title = 'Backup Security'
const description = 'Secure backup management and recovery testing'

// Verify user has proper permissions (would use actual auth check in production)
const isAuthorized = true // Replace with actual authorization check
---

<AdminLayout {title} {description} activeItem="backup-security">
  <div class="py-4">
    <div class="flex flex-col gap-2 mb-6">
      <h1 class="text-2xl font-bold">Backup Security Management</h1>
      <p class="text-gray-600 dark:text-gray-400">
        Configure and monitor secure encrypted backups, verify integrity, and
        test recovery procedures.
      </p>
    </div>

    {
      isAuthorized ? (
        <BackupSecurityManager />
      ) : (
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg
                class="h-5 w-5 text-red-400"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
                Access Denied
              </h3>
              <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                <p>
                  You do not have permission to access the Backup Security
                  settings. Please contact your administrator if you believe
                  this is an error.
                </p>
              </div>
            </div>
          </div>
        </div>
      )
    }
  </div>
</AdminLayout>
