---
export const prerender = false

import { LazyAcquisitionPage } from '@/components/journal-research/lazy'
import DashboardLayout from '@/layouts/DashboardLayout.astro'

// @ts-ignore Astro.props is injected at runtime
const { user } = Astro.props as { user: any }

const sessionId = Astro.url.searchParams.get('sessionId')
---

<DashboardLayout
  title="Data Acquisition | Pixelated Empathy"
  description="Acquire evaluated journal data sources"
>
  <div class="container mx-auto py-6 space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold">Data Acquisition</h1>
        <p class="text-muted-foreground mt-1">
          Acquire and download evaluated journal data sources
        </p>
      </div>
    </div>

    <LazyAcquisitionPage client:load {sessionId} />
  </div>
</DashboardLayout>
