---
const links = [
  { text: 'Home', href: '#' },
  { text: 'Features', href: '#features' },
  { text: 'Testimonials', href: '#testimonials' },
  { text: 'FAQ', href: '#faq' },
]
---

<header
  class="fixed top-0 w-full z-50 bg-slate-950/80 backdrop-blur-md border-b border-white/10"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <div class="flex-shrink-0 flex items-center gap-2">
        <!-- Logo Icon -->
        <div
          class="w-8 h-8 rounded-lg overflow-hidden shadow-lg shadow-primary-500/20"
        >
          <img
            src="/android-chrome-192x192.png"
            alt="Pixelated Empathy"
            class="w-full h-full object-cover"
          />
        </div>
        <span class="font-bold text-base tracking-tight text-white"
          >Pixelated Empathy</span
        >
      </div>

      <nav class="hidden md:flex space-x-8">
        {
          links.map((link) => (
            <a
              href={link.href}
              class="text-slate-300 hover:text-white transition-colors text-sm font-medium"
            >
              {link.text}
            </a>
          ))
        }
      </nav>

      <div class="hidden md:flex items-center gap-4">
        <a
          href="/login"
          class="text-slate-300 hover:text-white text-sm font-medium transition-colors"
        >
          Log in
        </a>
        <a
          href="/auth/signup"
          class="bg-white text-slate-950 px-5 py-2.5 rounded-full text-sm font-semibold hover:bg-slate-200 transition-colors"
        >
          Get Started
        </a>
      </div>
    </div>
  </div>
</header>
