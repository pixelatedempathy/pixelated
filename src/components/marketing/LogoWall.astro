---
// Simple enterprise logo wall with accessible placeholders
export interface Props {
  title?: string;
  subtitle?: string;
}
const { title = 'Trusted by forwardâ€‘thinking institutions', subtitle = 'Select partners and collaborators' } = Astro.props;
---

<section aria-label="Trusted institutions" class="logo-wall-section">
  <div class="brutalist-container">
    <div class="text-center mb-8">
      <p class="brutalist-caption">{subtitle}</p>
      <h3 class="brutalist-subheading text-xl md:text-2xl">{title}</h3>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 items-center justify-items-center">
      <div class="group flex items-center justify-center w-24 h-16 rounded-lg border border-gray-800 bg-gray-900/40 hover:border-gray-600 transition-all duration-300" aria-label="Harvard University">
        <span class="text-sm font-bold text-gray-400 group-hover:text-white transition-colors">HARVARD</span>
      </div>
      <div class="group flex items-center justify-center w-24 h-16 rounded-lg border border-gray-800 bg-gray-900/40 hover:border-gray-600 transition-all duration-300" aria-label="Johns Hopkins">
        <span class="text-sm font-bold text-gray-400 group-hover:text-white transition-colors">JOHNS<br/>HOPKINS</span>
      </div>
      <div class="group flex items-center justify-center w-24 h-16 rounded-lg border border-gray-800 bg-gray-900/40 hover:border-gray-600 transition-all duration-300" aria-label="Mayo Clinic">
        <span class="text-sm font-bold text-gray-400 group-hover:text-white transition-colors">MAYO</span>
      </div>
      <div class="group flex items-center justify-center w-24 h-16 rounded-lg border border-gray-800 bg-gray-900/40 hover:border-gray-600 transition-all duration-300" aria-label="VA Health">
        <span class="text-sm font-bold text-gray-400 group-hover:text-white transition-colors">VA</span>
      </div>
      <div class="group flex items-center justify-center w-24 h-16 rounded-lg border border-gray-800 bg-gray-900/40 hover:border-gray-600 transition-all duration-300" aria-label="Kaiser Permanente">
        <span class="text-sm font-bold text-gray-400 group-hover:text-white transition-colors">KAISER</span>
      </div>
      <div class="group flex items-center justify-center w-24 h-16 rounded-lg border border-gray-800 bg-gray-900/40 hover:border-gray-600 transition-all duration-300" aria-label="NIMH">
        <span class="text-sm font-bold text-gray-400 group-hover:text-white transition-colors">NIMH</span>
      </div>
    </div>
  </div>
</section>

<style>
  .logo-wall-section { padding-top: var(--space-12); padding-bottom: var(--space-12); }
  .logo-wall {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-4);
  }
  @media (min-width: 640px) { .logo-wall { grid-template-columns: repeat(3, minmax(0, 1fr)); } }
  @media (min-width: 1024px) { .logo-wall { grid-template-columns: repeat(6, minmax(0, 1fr)); } }
  .logo-item {
    display: flex; align-items: center; justify-content: center;
    padding: var(--space-4);
    height: 60px;
    color: var(--text-muted);
    border: 1px solid var(--border-primary);
    background: linear-gradient(180deg, var(--bg-secondary), var(--bg-tertiary));
    text-transform: uppercase; letter-spacing: 0.15em; font-weight: 700;
  }
</style>

