---
const steps = [
    {
        number: '01',
        title: 'Create Account',
        description: 'Start your journey with a simple signup process. Access our library of scenarios immediately.',
        link: 'Get Started',
        image: 'bg-indigo-500/10'
    },
    {
        number: '02',
        title: 'Select Scenario',
        description: 'Browse through our diverse catalog of clinical cases. Filter by condition, difficulty, or therapeutic modality.',
        link: 'Browse Library',
        image: 'bg-pink-500/10'
    },
    {
        number: '03',
        title: 'Engage AI',
        description: 'Interact with the AI patient in real-time. Use your voice or text to conduct the therapy session.',
        link: 'View Demo',
        image: 'bg-emerald-500/10'
    },
    {
        number: '04',
        title: 'Analyze Results',
        description: 'Receive instant, data-driven feedback on your performance. Identify strengths and areas for growth.',
        link: 'See Analytics',
        image: 'bg-orange-500/10'
    }
]
---

<section class="py-24 bg-slate-950 overflow-hidden">
    <div class="container mx-auto px-4">
        <div class="mb-20">
             <p class="text-primary-500 font-medium mb-4 uppercase tracking-wider">How it works</p>
             <h2 class="text-4xl md:text-5xl font-bold text-white max-w-xl">A thoughtful flow from theory to practice.</h2>
        </div>

        <div class="space-y-32">
            {steps.map((step, index) => (
                <div class={`flex flex-col md:flex-row items-center gap-12 md:gap-24 ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
                    <div class="flex-1">
                        <div class="text-primary-500 font-mono mb-4 text-sm tracking-widest uppercase">Step {step.number}</div>
                        <h3 class="text-3xl md:text-4xl font-bold mb-6 text-white">{step.title}</h3>
                        <p class="text-lg text-slate-400 leading-relaxed mb-8">{step.description}</p>
                         <a href="#" class="inline-flex items-center gap-2 text-white font-semibold border-b border-primary-500 pb-1 hover:text-primary-400 transition-colors">
                            {step.link}
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                        </a>
                    </div>
                     <div class="flex-1 w-full">
                        <div class={`aspect-[4/5] md:aspect-square rounded-2xl border border-white/10 ${step.image} relative overflow-hidden backdrop-blur-sm group`}>
                             <div class="absolute inset-0 bg-slate-900/40"></div>
                             <div class="absolute bottom-0 left-0 right-0 p-8 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 bg-slate-900/80 backdrop-blur-md border-t border-white/10">
                                <span class="text-white font-mono text-sm">Previewing Step {step.number}</span>
                             </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
