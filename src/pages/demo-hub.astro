    description: "Explore Fully Homomorphic Encryption capabilities in an interactive demo.",
    status: "ACTIVE",
    difficulty: "MEDIUM",
    href: "/demo/fhe",
    icon: "ï¿½",
    stats: { privacy: "100%", mode: "client" },
  },
  {
    title: "Emotion Visualization",
    description: "Visual demo of emotion metrics and dimensional analysis.",
    status: "ACTIVE",
    difficulty: "LOW",
    href: "/demo/emotion-visualization",
    icon: "ðŸ“ˆ",
    stats: { dims: "x/y", charts: "multiple" },
  },
  {
