{
  "authentication": {
    "methods": [
      "password",
      "mfa",
      "api_key"
    ],
    "password_policy": {
      "min_length": 12,
      "require_uppercase": true,
      "require_lowercase": true,
      "require_numbers": true,
      "require_symbols": true
    },
    "session_timeout": 3600,
    "max_login_attempts": 5
  },
  "authorization": {
    "rbac_enabled": true,
    "roles": [
      "admin",
      "user",
      "readonly"
    ],
    "permissions": [
      "read",
      "write",
      "delete",
      "admin"
    ]
  },
  "encryption": {
    "data_at_rest": true,
    "data_in_transit": true,
    "key_rotation_days": 90
  },
  "audit": {
    "enabled": true,
    "log_all_access": true,
    "retention_days": 365
  }
}