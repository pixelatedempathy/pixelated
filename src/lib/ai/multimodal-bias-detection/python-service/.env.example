# Multi-Modal Bias Detection Service Environment Configuration

# Application Settings
APP_NAME=Multi-Modal Bias Detection Service
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8001
WORKERS=1

# Database Settings
DATABASE_URL=postgresql://multimodal_user:multimodal_password@localhost:5433/multimodal_bias_detection

# Redis Settings
REDIS_URL=redis://localhost:6380/1

# Model Settings
MODEL_CACHE_DIR=./models
VISION_MODEL_PATH=./models/vision
AUDIO_MODEL_PATH=./models/audio
VIDEO_MODEL_PATH=./models/video
MULTIMODAL_MODEL_PATH=./models/multimodal

# Processing Settings
MAX_IMAGE_SIZE=10485760  # 10MB
MAX_AUDIO_SIZE=52428800  # 50MB
MAX_VIDEO_SIZE=104857600  # 100MB
MAX_IMAGE_DIMENSIONS=2048
MAX_AUDIO_DURATION=300  # 5 minutes
MAX_VIDEO_DURATION=600  # 10 minutes

# ML Settings
BATCH_SIZE=16
MODEL_TIMEOUT=60
CONFIDENCE_THRESHOLD=0.7

# Vision Processing
VISION_MODEL_NAME=clip-vit-base-patch32
FACE_DETECTION_MODEL=retinaface
OCR_MODEL_NAME=paddleocr

# Audio Processing
AUDIO_MODEL_NAME=wav2vec2-base
SPEECH_TO_TEXT_MODEL=whisper-base
SAMPLE_RATE=16000

# Video Processing
VIDEO_MODEL_NAME=timesformer-base
FRAME_EXTRACTION_RATE=1
KEYFRAME_THRESHOLD=0.3

# Security Settings
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=30
MAX_CONCURRENT_REQUESTS=5

# File Storage
UPLOAD_DIR=./uploads
TEMP_CLEANUP_INTERVAL=3600  # 1 hour
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,bmp,webp
ALLOWED_AUDIO_FORMATS=mp3,wav,flac,m4a,ogg
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv,webm

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=1800  # 30 minutes for multimedia
ENABLE_ASYNC_PROCESSING=true
ENABLE_GPU_ACCELERATION=true

# Development Settings (for local development)
# DEBUG=true
# LOG_LEVEL=DEBUG
# ENVIRONMENT=development
# WORKERS=1
# ENABLE_GPU_ACCELERATION=false

# Production Settings (for production deployment)
# DEBUG=false
# LOG_LEVEL=INFO
# ENVIRONMENT=production
# WORKERS=4
# ENABLE_GPU_ACCELERATION=true

# Testing Settings (for testing)
# DEBUG=true
# LOG_LEVEL=DEBUG
# ENVIRONMENT=testing
# ENABLE_CACHING=false
# ENABLE_GPU_ACCELERATION=false