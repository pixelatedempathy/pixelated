---
// Theme CSS files are linked directly from public folder for SSR compatibility
import { SpeedInsights } from '@vercel/speed-insights/astro'

interface Props {
  title: string
  description?: string
}

const {
  title,
  description = 'Pixelated Empathy - AI-powered Therapy Training',
} = Astro.props
---

<!doctype html>
<html lang="en" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="color-scheme" content="dark" />
    <meta name="theme-color" content="#000000" />
    <title>{title} | Pixelated Empathy</title>
    <meta name="description" content={description} />

    <!-- Social media meta tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Theme stylesheets (Mizu theme) -->
    <link rel="stylesheet" href="/css/unified-dark-theme-v3.css" />
    <link rel="stylesheet" href="/css/design-system.css" />
    <link rel="stylesheet" href="/css/unified-blended-theme.css" />
    
    <!-- Font stylesheets -->
    <link rel="stylesheet" href="/css/fonts.css" />
    <link rel="stylesheet" href="/css/font-fix.css" />

    <!-- Background and UI fixes -->
    <link rel="stylesheet" href="/css/background-fixes.css" />

    <!-- Polyfill detection script -->
    <script src="/js/polyfill-detector.js" is:inline></script>

    <!-- Module preloader -->
    <script src="/js/module-loader.js" defer is:inline></script>

    <!-- Background and font loader -->
    <script src="/js/background-loader.js" defer is:inline></script>
  </head>
  <body
    class="min-h-screen"
    style="background: var(--bg-primary); color: var(--text-primary);"
  >
    <!-- Skip to content link for accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 rounded-md focus:shadow-lg transition-transform"
      style="background: var(--accent-primary); color: var(--bg-primary);"
    >
      Skip to content
    </a>

    <header class="glass-panel" style="border-bottom: var(--border-primary);">
      <div class="container-refined py-4 flex justify-between items-center">
        <a
          href="/"
          class="text-2xl font-bold brand-title"
          style="color: var(--text-primary); font-family: var(--font-sans); font-weight: 800; letter-spacing: -0.01em;"
          >Pixelated Empathy</a
        >
        <nav>
          <ul class="nav-minimal">
            <li><a href="/" class="nav-link-refined">Home</a></li>
            <li><a href="/blog" class="nav-link-refined">Blog</a></li>
            <li><a href="/about" class="nav-link-refined">About</a></li>
            <li><a href="/company" class="nav-link-refined">Company</a></li>
            <li><a href="/team" class="nav-link-refined">Team</a></li>
            <li><a href="/contact" class="nav-link-refined">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main id="main-content" class="container-refined py-12">
      <slot />
    </main>

    <footer class="border-t mt-12" style="border-color: var(--border-primary);">
      <div class="container-refined px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <p>
              &copy; {new Date().getFullYear()} Pixelated Empathy. All rights reserved.
            </p>
          </div>
          <div class="flex space-x-4">
            <a
              href="https://twitter.com/tweetpixelated"
              class="nav-link-refined"
              style="color: var(--text-muted);"
            >
              <span class="sr-only">Twitter</span>
              <svg
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
                ></path>
              </svg>
            </a>
            <a
              href="https://github.com/nochadisfaction/pixel"
              class="nav-link-refined"
              style="color: var(--text-muted);"
            >
              <span class="sr-only">GitHub</span>
              <svg
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>
    <script is:inline>
      function speedInsightsBeforeSend(data) {
        console.log('Speed Insights before send', data)
        return data
      }
    </script>

    <!-- Vercel Speed Insights -->
    <SpeedInsights />
  </body>
</html>

<style is:global>
  :root {
    --color-primary-400: #8b5cf6;
    --color-primary-500: #7c3aed;
    --color-primary-600: #6d28d9;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      color-scheme: dark;
    }
  }
</style>
