# Environment variables for Pixelated Empathy
# Copy this file to .env and fill in your values

# Application settings
NODE_ENV=production
PORT=4321
WEB_PORT=4321
LOG_LEVEL=info

# Security and rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HIPAA_COMPLIANCE=true
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_MASKING=true

# Disable telemetry
ASTRO_TELEMETRY_DISABLED=1

# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pixelated_empathy
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=pixelated_empathy
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-super-secret-session-key-here

# AI API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# External services
REDIS_URL=redis://localhost:6379
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring and analytics
SENTRY_DSN=https://your-sentry-dsn-here
LOGTAIL_TOKEN=your-logtail-token-here

# Feature flags
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true

# Optional: Custom domain settings
PUBLIC_URL=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com,http://localhost:4321
