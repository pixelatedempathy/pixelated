---
// Enhanced Features Section - Brutalist + Corporate Design
const features = [
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>`,
    title: "AI-Powered Scenarios",
    description: "Experience realistic patient interactions through advanced AI simulation that adapts to your responses in real-time.",
    stats: "10,000+ scenarios",
    color: "var(--accent-primary)"
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>`,
    title: "Real-Time Analytics",
    description: "Track your progress with detailed analytics on empathy scores, response quality, and therapeutic effectiveness.",
    stats: "95% accuracy",
    color: "var(--accent-blue)"
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>`,
    title: "Evidence-Based Training",
    description: "Built on proven therapeutic methodologies and continuously updated with the latest research findings.",
    stats: "50+ frameworks",
    color: "var(--accent-purple)"
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>`,
    title: "Collaborative Learning",
    description: "Share insights with peers, participate in group sessions, and learn from expert-led discussions.",
    stats: "24/7 community",
    color: "var(--accent-orange)"
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>`,
    title: "HIPAA Compliant",
    description: "Enterprise-grade security ensuring all training data and interactions meet healthcare privacy standards.",
    stats: "100% secure",
    color: "var(--accent-red)"
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>`,
    title: "Instant Feedback",
    description: "Receive immediate, actionable feedback on your therapeutic responses and communication style.",
    stats: "< 100ms response",
    color: "var(--accent-primary)"
  }
]
---

<section class="elegant-surface" style="background: var(--bg-secondary); padding: var(--space-20) 0; position: relative;">
  <!-- Background Pattern -->
  <div 
    style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.02; background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, var(--border-primary) 35px, var(--border-primary) 36px);"
  ></div>

  <div class="container-refined" style="position: relative; z-index: 1;">
    
    <!-- Section Header -->
    <div class="text-center" style="margin-bottom: var(--space-16);">
      <div class="corporate-badge" style="margin: 0 auto var(--space-4);">
        <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24" style="margin-right: var(--space-2);">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        PLATFORM FEATURES
      </div>
      
      <h2 class="heading-brutalist heading-brutalist--hero" style="margin-bottom: var(--space-6);">
        ADVANCED AI TRAINING
      </h2>
      
      <p 
        style="font-size: var(--text-xl); color: var(--text-secondary); max-width: 600px; margin: 0 auto; line-height: 1.6;"
      >
        Cutting-edge technology meets evidence-based therapeutic training in our comprehensive platform designed for mental health professionals.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid-brutalist" style="grid-template-columns: repeat(auto-fit, minmax(380px, 1fr)); gap: var(--space-8);">
      {features.map((feature, index) => (
        <div 
          class="card-brutalist animate-fade-in-up"
          style={`position: relative; overflow: hidden; transition: all var(--transition-normal); animation-delay: ${index * 100}ms;`}
        >
          <div
            class="flex items-center justify-center"
            style={`width: 3.5rem; height: 3.5rem; background: ${feature.color}; border-radius: var(--radius-xl); margin-bottom: var(--space-6);`}
          >
            <svg
              width="24"
              height="24"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              style="color: white;"
              set:html={feature.icon}
            />
          </div>
          
          <!-- Feature Content -->
          <div>
            <div class="flex items-center justify-between" style="margin-bottom: var(--space-3);">
              <h3 
                class="heading-brutalist"
                style="font-size: var(--text-xl); color: var(--text-primary); margin: 0;"
              >
                {feature.title}
              </h3>
              <span 
                class="corporate-badge"
                style={`background: rgba(${feature.color.replace('var(--accent-', '').replace(')', '')}, 0.1); color: ${feature.color};`}
              >
                {feature.stats}
              </span>
            </div>
            
            <p 
              style="font-size: var(--text-base); color: var(--text-secondary); line-height: 1.6; margin: 0;"
            >
              {feature.description}
            </p>
          </div>
          
          <!-- Hover Effect -->
          <div 
            style={`position: absolute; top: 0; left: 0; right: 0; height: 2px; background: linear-gradient(90deg, transparent, ${feature.color}, transparent); opacity: 0; transition: opacity var(--transition-normal);`}
            class="feature-highlight"
          ></div>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center" style="margin-top: var(--space-16);">
      <div class="card-brutalist glass-surface" style="padding: var(--space-8); max-width: 600px; margin: 0 auto;">
        <h3 class="heading-brutalist text-gradient" style="font-size: var(--text-2xl); margin-bottom: var(--space-4);">
          Ready to Transform Your Practice?
        </h3>
        <p style="color: var(--text-secondary); margin-bottom: var(--space-6); font-size: var(--text-lg);">
          Join thousands of mental health professionals already using our platform.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/demo-hub"
            class="btn-brutalist btn-brutalist--primary animate-pulse-glow"
            style="padding: var(--space-4) var(--space-8); border-radius: var(--radius-xl); font-weight: var(--weight-bold);"
          >
            START FREE TRIAL
          </a>
          <a
            href="/contact"
            class="btn-brutalist btn-brutalist--secondary"
            style="padding: var(--space-4) var(--space-8); border-radius: var(--radius-xl);"
          >
            SCHEDULE DEMO
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
/* Feature hover effects */
.card-brutalist:hover .feature-highlight {
  opacity: 1;
}

.card-brutalist:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
}

/* Mobile responsive */
@media (max-width: 768px) {
  .grid-brutalist {
    grid-template-columns: 1fr !important;
  }
  
  .elegant-surface {
    padding: var(--space-16) 0 !important;
  }
  
  .container-refined {
    padding: 0 var(--space-4);
  }
}

/* Staggered animation */
.animate-fade-in-up:nth-child(1) { animation-delay: 0ms; }
.animate-fade-in-up:nth-child(2) { animation-delay: 100ms; }
.animate-fade-in-up:nth-child(3) { animation-delay: 200ms; }
.animate-fade-in-up:nth-child(4) { animation-delay: 300ms; }
.animate-fade-in-up:nth-child(5) { animation-delay: 400ms; }
.animate-fade-in-up:nth-child(6) { animation-delay: 500ms; }
</style>