---
const steps = [
  {
    number: '01',
    title: 'Create Account',
    description:
      'Start your journey with a simple signup process. Access our library of scenarios immediately.',
    link: 'Get Started',
    image: '/images/features/competency.jpg',
    gradient: 'from-indigo-500/20 to-purple-500/20',
  },
  {
    number: '02',
    title: 'Select Scenario',
    description:
      'Browse through our diverse catalog of clinical cases. Filter by condition, difficulty, or therapeutic modality.',
    link: 'Browse Library',
    image: '/images/features/edge-case.jpg',
    gradient: 'from-pink-500/20 to-rose-500/20',
  },
  {
    number: '03',
    title: 'Engage AI',
    description:
      'Interact with the AI patient in real-time. Use your voice or text to conduct the therapy session.',
    link: 'View Demo',
    image: '/images/features/mental-health-therapy.jpg',
    gradient: 'from-emerald-500/20 to-teal-500/20',
  },
  {
    number: '04',
    title: 'Analyze Results',
    description:
      'Receive instant, data-driven feedback on your performance. Identify strengths and areas for growth.',
    link: 'See Analytics',
    image: '/images/features/bias-spike.jpg',
    gradient: 'from-orange-500/20 to-amber-500/20',
  },
]
---

<section class="py-24 bg-slate-950 overflow-hidden">
  <div class="container mx-auto px-4">
    <div class="mb-16">
      <p
        class="text-primary-500 font-medium mb-3 uppercase tracking-wider text-sm"
      >
        How it works
      </p>
      <h2 class="text-2xl md:text-3xl font-bold text-white max-w-xl">
        A thoughtful flow from theory to practice.
      </h2>
    </div>

    <div class="space-y-20 md:space-y-24">
      {
        steps.map((step, index) => (
          <div
            class={`flex flex-col md:flex-row items-center gap-10 md:gap-16 ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}
          >
            <div class="flex-1">
              <div class="text-primary-500 font-mono mb-3 text-xs tracking-widest uppercase">
                Step {step.number}
              </div>
              <h3 class="text-xl md:text-2xl font-bold mb-3 text-white">
                {step.title}
              </h3>
              <p class="text-base text-slate-400 leading-relaxed mb-5">
                {step.description}
              </p>
              <a
                href="#"
                class="inline-flex items-center gap-2 text-white font-semibold border-b border-primary-500 pb-1 hover:text-primary-400 transition-colors text-sm"
              >
                {step.link}
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </a>
            </div>
            <div class="flex-1 w-full">
              <div class="aspect-[4/3] rounded-2xl border border-white/10 relative overflow-hidden group">
                <img
                  src={step.image}
                  alt={step.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
                <div
                  class={`absolute inset-0 bg-gradient-to-br ${step.gradient} mix-blend-overlay opacity-60`}
                />
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-slate-900/20 to-transparent" />
                <div class="absolute bottom-0 left-0 right-0 p-6">
                  <span class="text-white/80 font-mono text-xs tracking-wider uppercase">
                    Step {step.number} Â· {step.title}
                  </span>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
