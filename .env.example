# Pixelated Empathy - Environment Configuration Template
# =====================================================
# Copy this file to .env and fill in your actual values
# DO NOT COMMIT .env TO VERSION CONTROL

# Basic Environment Configuration
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pixelated_dev
DB_USERNAME=dev_user
DB_PASSWORD=your_db_password_here
DB_SSL=false

# MongoDB Configuration (Legacy)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_DB_NAME=pixelated_empathy

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DATABASE=0
REDIS_KEY_PREFIX=pixelated:dev:
REDIS_TTL=3600

# API Configuration
API_HOST=localhost
API_PORT=3000
API_TIMEOUT=30000

# Authentication Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here_minimum_32_characters
SESSION_MAX_AGE=86400000
CSRF_SECRET=your_csrf_secret_here_minimum_32_characters

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# AI Services Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=1000

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=uploads/dev
STORAGE_MAX_FILE_SIZE=10MB

# AWS Configuration (for S3 storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET=your_s3_bucket_name_here

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_SECURE=false
EMAIL_USER=your_email_user_here
EMAIL_PASS=your_email_password_here
EMAIL_FROM=dev@pixelated-empathy.local

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

DATADOG_API_KEY=your_datadog_api_key_here
DATADOG_SERVICE=pixelated-empathy-dev

NEWRELIC_LICENSE_KEY=your_newrelic_license_key_here
NEWRELIC_APP_NAME=Pixelated Empathy Dev

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=detailed
LOG_FILE=logs/development.log

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_here_32_characters_minimum
HELMET_CSP=false

# Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_PASSWORD_RESET=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_AI_CHAT=true
FEATURE_FILE_UPLOAD=true
FEATURE_ANALYTICS=false
FEATURE_MAINTENANCE_MODE=false

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=2000

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:4321
CORS_CREDENTIALS=true

# CDN Configuration
CDN_ENABLED=false
CDN_DOMAIN=your_cdn_domain_here

# Cloudflare Configuration
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1GB
CACHE_STRATEGY=lru

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_DETAILED=true

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Development Tools
WEBPACK_DEV_SERVER=true
HOT_RELOAD=true
SOURCE_MAPS=true
BUNDLE_ANALYZER=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/pixelated_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_TIMEOUT=30000

# CI/CD Configuration
CI=false
PIPELINE_ID=local
BUILD_NUMBER=0
COMMIT_SHA=local
BRANCH_NAME=local
