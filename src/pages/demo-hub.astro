    description: "Production-grade chat with MentalLLaMA analysis (falls back to demo mode locally).",
    status: "ACTIVE",
    difficulty: "MEDIUM",
    href: "/mental-health-demo",
    icon: "ï¿½",
    stats: { analysis: "real-time", crisis: "on" },
  },
  {
