{
  "cicd": {
    "name": "pixelated-empathy-pipeline",
    "version": "1.0.0",
    "environments": {
      "development": {
        "branch": "develop",
        "auto_deploy": true,
        "run_tests": true,
        "deployment_target": "staging",
        "health_check_url": "https://staging.pixelated-empathy.com/health",
        "smoke_tests": [
          "curl -f https://staging.pixelated-empathy.com/health",
          "curl -f https://staging.pixelated-empathy.com/api/status"
        ]
      },
      "staging": {
        "branch": "develop",
        "auto_deploy": true,
        "run_tests": true,
        "deployment_target": "staging",
        "health_check_url": "https://staging.pixelated-empathy.com/health",
        "performance_tests": true,
        "security_scan": true
      },
      "production": {
        "branch": "main",
        "auto_deploy": false,
        "manual_approval": true,
        "run_tests": true,
        "deployment_target": "production",
        "health_check_url": "https://pixelated-empathy.com/health",
        "rollback_enabled": true,
        "backup_before_deploy": true
      }
    },
    "pipeline_stages": {
      "code_quality": {
        "enabled": true,
        "tools": ["eslint", "prettier", "typescript"],
        "fail_on_error": false,
        "generate_reports": true
      },
      "security_scan": {
        "enabled": true,
        "tools": ["npm-audit", "trivy", "snyk"],
        "fail_on_high": true,
        "fail_on_critical": true
      },
      "unit_tests": {
        "enabled": true,
        "coverage_threshold": 80,
        "fail_on_threshold": false,
        "generate_reports": true,
        "parallel": true
      },
      "integration_tests": {
        "enabled": true,
        "timeout": 300,
        "retry_count": 2,
        "fail_fast": false
      },
      "e2e_tests": {
        "enabled": true,
        "browsers": ["chromium", "firefox", "webkit"],
        "timeout": 600,
        "retry_count": 1,
        "parallel": false
      },
      "build": {
        "enabled": true,
        "optimization": true,
        "generate_artifacts": true,
        "docker_build": true,
        "cache_enabled": true
      },
      "deployment": {
        "strategy": "rolling",
        "health_check_timeout": 300,
        "rollback_on_failure": true,
        "notification_channels": ["slack", "email"]
      }
    },
    "notifications": {
      "slack": {
        "enabled": true,
        "webhook_url": "${SLACK_WEBHOOK_URL}",
        "channels": {
          "success": "#deployments",
          "failure": "#alerts",
          "security": "#security-alerts"
        }
      },
      "email": {
        "enabled": true,
        "smtp_server": "${SMTP_SERVER}",
        "recipients": {
          "deployment": ["devops@pixelated-empathy.com"],
          "security": ["security@pixelated-empathy.com"],
          "failure": ["alerts@pixelated-empathy.com"]
        }
      }
    },
    "quality_gates": {
      "code_coverage": {
        "minimum": 80,
        "target": 90,
        "fail_build": false
      },
      "security_vulnerabilities": {
        "critical": 0,
        "high": 2,
        "medium": 10,
        "fail_build": true
      },
      "performance": {
        "lighthouse_score": 85,
        "load_time": 3000,
        "fail_build": false
      },
      "code_quality": {
        "eslint_errors": 0,
        "typescript_errors": 0,
        "fail_build": false
      }
    },
    "artifact_management": {
      "retention_days": 30,
      "cleanup_old_builds": true,
      "compress_artifacts": true,
      "storage_location": "artifacts/",
      "docker_registry": "ghcr.io"
    },
    "monitoring": {
      "build_metrics": true,
      "deployment_metrics": true,
      "test_metrics": true,
      "performance_metrics": true,
      "dashboard_url": "https://grafana.pixelated-empathy.com"
    }
  }
}
