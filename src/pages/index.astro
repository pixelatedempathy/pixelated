  <!-- Animated metrics script -->
  <script is:inline>
    // Animate metrics on load
    function animateMetric(elementId, targetValue, suffix = '') {
      const element = document.getElementById(elementId)
      if (!element) return

      const isPercent = targetValue.includes('%')
      const isMultiplier = targetValue.includes('x')
      const numericValue = parseFloat(targetValue.replace(/[^\d.]/g, ''))
      let current = 0
      const increment = numericValue / 60
      const suffixStr = isPercent ? '%' : isMultiplier ? 'x' : suffix

      const timer = setInterval(() => {
        current += increment
        if (current >= numericValue) {
          element.textContent = targetValue
          clearInterval(timer)
        } else {
          element.textContent = Math.floor(current) + suffixStr
        }
      }, 16)
    }

    // Start animations when page loads
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        setTimeout(() => {
          animateMetric('metric-empathy', '92%')
          animateMetric('metric-safety', '100%')
          animateMetric('metric-growth', '+3.2x')
