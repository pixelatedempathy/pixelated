---
interface Props {
  class?: string
}

const { class: className = '' } = Astro.props
---

<div class={`relative ${className}`.trim()}>
  <div
    aria-hidden="true"
    class="pointer-events-none absolute inset-0 opacity-[0.08]"
    style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,.15) 1px, transparent 1px); background-size: 22px 22px;"
  >
  </div>
  <slot />
</div>
