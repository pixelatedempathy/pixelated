---
import BaseLayout from '@/layouts/BaseLayout.astro'
import SearchDemo from '@/components/SearchDemo.astro'
---

<BaseLayout title="Search Demo | Pixelated Empathy">
  <div class="container mx-auto py-10">
    <h1 class="text-3xl font-bold mb-6">Search Demo</h1>
    <p class="text-muted-foreground mb-8">
      Try our client-side search powered by FlexSearch and backed by the
      /api/v1/search endpoint.
    </p>
    <SearchDemo client:load />
  </div>
</BaseLayout>
