OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI/OpenRouter models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"  # Required if using Azure OpenAI
AZURE_OPENAI_API_VERSION="2024-02-01"                # API version for Azure OpenAI
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4"                 # Your deployment name in Azure OpenAI

# Slack Webhook URL (optional, for crisis notifications via MentalLLaMAAdapter)
SLACK_WEBHOOK_URL=""

# Azure Storage (for backups and file storage)
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net"
AZURE_STORAGE_ACCOUNT_NAME="your_storage_account"    # Azure Storage account name
AZURE_STORAGE_ACCOUNT_KEY="your_storage_key"         # Azure Storage account key
AZURE_STORAGE_CONTAINER_NAME="pixelated-backups"     # Container name for backups

# Azure Active Directory (for authentication)
AZURE_AD_CLIENT_ID="your_azure_ad_client_id"         # Azure AD application client ID
AZURE_AD_CLIENT_SECRET="your_azure_ad_client_secret" # Azure AD application client secret
AZURE_AD_TENANT_ID="your_azure_ad_tenant_id"         # Azure AD tenant ID
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.

SENTRY_PUBLIC_DSN="https://ef4ca2c0d2530a95efb0ef55c168b661@o4509483611979776.ingest.us.sentry.io/4509483637932032"

# Database Configuration
POSTGRES_DB=pixelated_empathy
POSTGRES_USER=pixelated_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379

# Application Environment
NODE_ENV=production
LOG_LEVEL=info

# Bias Detection Service
BIAS_DETECTION_PORT=8001
BIAS_DETECTION_MODEL_PATH=/app/models
BIAS_DETECTION_CACHE_TTL=3600
BIAS_DETECTION_SERVICE_URL=http://localhost:5000
BIAS_SERVICE_TIMEOUT=30000

# Bias Detection Thresholds (0.0 - 1.0 scale)
BIAS_WARNING_THRESHOLD=0.3
BIAS_HIGH_THRESHOLD=0.6
BIAS_CRITICAL_THRESHOLD=0.8

# Bias Detection Layer Weights (must sum to 1.0)
BIAS_WEIGHT_PREPROCESSING=0.25
BIAS_WEIGHT_MODEL_LEVEL=0.25
BIAS_WEIGHT_INTERACTIVE=0.25
BIAS_WEIGHT_EVALUATION=0.25

# Bias Detection Evaluation Metrics
BIAS_EVALUATION_METRICS=demographic_parity,equalized_odds,calibration,individual_fairness

# HIPAA Compliance Settings
ENABLE_HIPAA_COMPLIANCE=true
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_MASKING=true

# Bias Detection Alerts
BIAS_ALERT_SLACK_WEBHOOK=
BIAS_ALERT_EMAIL_RECIPIENTS=
BIAS_ALERT_COOLDOWN_MINUTES=1

# Bias Detection Metrics
BIAS_METRICS_RETENTION_DAYS=30
BIAS_DASHBOARD_REFRESH_RATE=60
BIAS_ENABLE_REAL_TIME_MONITORING=true

# AI Service Configuration
AI_SERVICE_PORT=8002
AI_MODEL_CACHE_DIR=/app/cache

# Analytics Service
ANALYTICS_PORT=8003
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60000

# Background Jobs
WORKER_CONCURRENCY=5
JOB_QUEUE_NAME=pixelated_jobs
JOB_ATTEMPTS=3

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Web Application
WEB_PORT=4321
PUBLIC_URL=https://localhost

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/pixelated.crt
SSL_KEY_PATH=/etc/ssl/private/pixelated.key

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=https://localhost,https://yourdomain.com

# Feature Flags
ENABLE_BIAS_DETECTION=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_BACKGROUND_JOBS=true
ENABLE_MONITORING=true