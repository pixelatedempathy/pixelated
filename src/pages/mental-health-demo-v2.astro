---
import BaseLayout from '@/layouts/BaseLayout.astro'
import MentalHealthChatDemo from '@/components/MentalHealthChatDemo.astro'
---

<BaseLayout
  title="Mental Health Support Chat - Production Demo"
  description="Production-grade mental health analysis and therapeutic response system demonstration"
>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <header class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Mental Health Support Chat
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-6">
          Production-grade mental health analysis and therapeutic response
          system
        </p>
        <div
          class="bg-blue-50 dark:bg-blue-950 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-8"
        >
          <h2
            class="text-lg font-semibold text-blue-800 dark:text-blue-200 mb-2"
          >
            üöÄ New Production-Grade Features
          </h2>
          <ul
            class="text-sm text-blue-700 dark:text-blue-300 space-y-1 text-left"
          >
            <li>‚Ä¢ Real-time mental health analysis with confidence scoring</li>
            <li>‚Ä¢ Crisis detection and intervention recommendations</li>
            <li>‚Ä¢ Evidence-based therapeutic response generation</li>
            <li>‚Ä¢ Risk trend analysis and conversation insights</li>
            <li>‚Ä¢ Configurable analysis parameters and thresholds</li>
            <li>‚Ä¢ Comprehensive testing and documentation</li>
          </ul>
        </div>
      </header>

      <MentalHealthChatDemo
        conversationId="production-demo"
        title=""
        description=""
        initialConfig={{
          enableAnalysis: true,
          confidenceThreshold: 0.6,
          interventionThreshold: 0.7,
          analysisMinLength: 10,
          enableCrisisDetection: true,
        }}
      />

      <section class="mt-12 space-y-8">
        <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-6">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
            How It Works
          </h2>
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h3
                class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-2"
              >
                Analysis Engine
              </h3>
              <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1">
                <li>‚Ä¢ Keyword-based pattern detection</li>
                <li>‚Ä¢ Sentiment analysis and scoring</li>
                <li>‚Ä¢ Risk level categorization</li>
                <li>‚Ä¢ Confidence measurement</li>
              </ul>
            </div>
            <div>
              <h3
                class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-2"
              >
                Therapeutic Response
              </h3>
              <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1">
                <li>‚Ä¢ Evidence-based approaches</li>
                <li>‚Ä¢ Crisis intervention protocols</li>
                <li>‚Ä¢ Cognitive and behavioral techniques</li>
                <li>‚Ä¢ Supportive communication</li>
              </ul>
            </div>
          </div>
        </div>

        <div
          class="bg-yellow-50 dark:bg-yellow-950 border border-yellow-200 dark:border-yellow-800 rounded-lg p-6"
        >
          <h2
            class="text-xl font-bold text-yellow-800 dark:text-yellow-200 mb-3"
          >
            ‚ö†Ô∏è Important Disclaimer
          </h2>
          <p class="text-sm text-yellow-700 dark:text-yellow-300">
            This is a demonstration system for educational purposes. It is not
            intended to replace professional mental health care. If you or
            someone you know is experiencing a mental health crisis, please
            contact:
          </p>
          <ul
            class="text-sm text-yellow-700 dark:text-yellow-300 mt-2 space-y-1"
          >
            <li>
              ‚Ä¢ <strong>National Suicide Prevention Lifeline:</strong> 988
            </li>
            <li>‚Ä¢ <strong>Crisis Text Line:</strong> Text HOME to 741741</li>
            <li>‚Ä¢ <strong>Emergency Services:</strong> 911</li>
          </ul>
        </div>

        <div
          class="bg-green-50 dark:bg-green-950 border border-green-200 dark:border-green-800 rounded-lg p-6"
        >
          <h2 class="text-xl font-bold text-green-800 dark:text-green-200 mb-3">
            üîí Privacy & Security
          </h2>
          <ul class="text-sm text-green-700 dark:text-green-300 space-y-1">
            <li>‚Ä¢ All processing happens locally in your browser</li>
            <li>‚Ä¢ No data is sent to external servers</li>
            <li>‚Ä¢ Conversation history is temporary and limited</li>
            <li>‚Ä¢ No personal information is stored</li>
          </ul>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>
