---
export const prerender = false

import DashboardLayout from '@/layouts/DashboardLayout.astro'
import { LazyReportsPage } from '@/components/journal-research/lazy'

// @ts-expect-error Astro.props is injected at runtime
const { user } = Astro.props as { user: any }

const sessionId = Astro.url.searchParams.get('sessionId')
const reportId = Astro.url.searchParams.get('reportId')
---

<DashboardLayout
  title="Research Reports | Pixelated Empathy"
  description="Generate and view research session reports"
>
  <div class="container mx-auto py-6 space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold">Research Reports</h1>
        <p class="text-muted-foreground mt-1">
          Generate and view comprehensive reports for your research sessions
        </p>
      </div>
    </div>

    <LazyReportsPage client:load sessionId={sessionId} reportId={reportId} />
  </div>
</DashboardLayout>

