---
import BaseLayout from '../layouts/BaseLayout.astro'
import { LoginForm } from '../components/auth/LoginForm.tsx'
import { ClientRouter } from 'astro:transitions'

// Get the redirect URL from the query parameters
const redirectUrl = Astro.url.searchParams.get('redirect') || '/dashboard'

// Check if the redirection is coming from the dashboard
const isFromDashboard = redirectUrl.includes('/dashboard')

// Set to server-rendered mode since we need access to request data
export const prerender = false
---

<BaseLayout
  title="Login | Pixelated Empathy"
  description="Log in to your Pixelated Empathy account to access mental health resources and personal therapy chat."
  bgType={undefined}
>
  <ClientRouter />
  <div
    class="w-full max-w-md mx-auto p-8 rounded-2xl bg-white/5 backdrop-blur-md border border-white/10 shadow-2xl"
  >
    <link rel="preload" as="image" href="/apple-touch-icon.png" fetchpriority="high" />
    <LoginForm client:idle redirectTo={redirectUrl} showSignup={false} />

    {
      isFromDashboard && (
        <div class="mt-6 p-4 border border-yellow-500/20 rounded-xl bg-yellow-500/5 text-sm">
          <div class="flex items-center justify-center">
            <div class="mr-3">
              <svg
                class="w-4 h-4 text-yellow-500"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
            </div>
            <div class="text-center">
              <h3 class="text-sm font-medium text-white">Session Required</h3>
              <p class="text-xs text-gray-400 mt-1">
                You need to be logged in to access the dashboard.
              </p>
            </div>
          </div>
        </div>
      )
    }
  </div>
</BaseLayout>

<style>
  /* Clean, minimal styling */
  /* Critical CSS for first paint (auth container and headings) */
  .auth-form-container { max-width: 28rem; margin: 0 auto; }
  .text-gradient { background: linear-gradient(90deg, #fff, #9ae6b4); -webkit-background-clip: text; background-clip: text; color: transparent; }
  .form-input { width: 100%; padding: 0.5rem 0.75rem; border-radius: 0.5rem; border: 1px solid rgba(255,255,255,0.1); background: rgba(255,255,255,0.04); color: #fff; }
  .btn { display: inline-flex; align-items: center; justify-content: center; padding: 0.625rem 1rem; border-radius: 0.75rem; }
  .btn-primary { background: #22c55e; color: #000; }

  /* Responsive text adjustments */
  @media (max-width: 640px) {
    h1 {
      font-size: 1.5rem;
    }
  }
</style>
