---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout
  title="Plum Background Test"
  description="Testing the plum background implementation"
  bgType="plum"
>
  <div class="min-h-screen flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-white mb-4">Plum Background Test</h1>
      <p class="text-lg text-gray-300">
        You should see animated plum branches in the background
      </p>
      <div class="mt-8 p-6 bg-black/20 rounded-lg backdrop-blur-sm">
        <p class="text-sm text-gray-400">
          If you can see this text clearly against animated branches, the plum background is working!
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
