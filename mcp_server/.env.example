# MCP Server Environment Configuration
# Copy this file to .env and update the values

# Core Application
APP_NAME=MCP Server
API_VERSION=v1
DEBUG=false
ENVIRONMENT=development

# Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8080

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mcp_server
DB_MAX_POOL_SIZE=100
DB_MIN_POOL_SIZE=10
DB_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=30
REDIS_CONNECT_TIMEOUT=10

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
TOKEN_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=86400

# Rate Limiting Configuration
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=10
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=2555
AUDIT_ENCRYPTION_KEY=your-audit-encryption-key

# API Documentation
ENABLE_DOCS=true
ENABLE_REDOC=true
ENABLE_OPENAPI=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4321

# Security Settings
CORS_ENABLED=true
REQUEST_ID_HEADER=X-Request-ID

# Performance Settings
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30

# External Services
FLASK_API_URL=http://localhost:8000
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
BIAS_DETECTION_URL=http://localhost:8001

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090