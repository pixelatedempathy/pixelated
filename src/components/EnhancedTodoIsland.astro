---
import EnhancedTodo from './EnhancedTodo.astro'

interface TodoItem {
  id: string
  text: string
  completed: boolean
  category?: string
  dueDate?: string
  priority?: 'low' | 'medium' | 'high'
}

interface Props {
  title?: string
  initialTodos?: TodoItem[]
  storageKey?: string
}

const {
  title = 'Enhanced Todo List',
  initialTodos = [],
  storageKey = 'enhanced-todos',
} = Astro.props
---

<div class="enhanced-todo-island">
  <EnhancedTodo client:visible {title} {initialTodos} {storageKey} />
</div>

<style>
  .enhanced-todo-island {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
  }
</style>
