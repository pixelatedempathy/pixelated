# CMS Business Strategy API Environment Configuration

# ============================================================================
# DATABASE CONNECTIONS
# ============================================================================

# MongoDB Atlas
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/pixelated-cms

# PostgreSQL / Supabase
DATABASE_URL=postgresql://user:password@localhost:5432/pixelated_cms

# Redis
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Server
PORT=5000
NODE_ENV=development
HOST=localhost

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ============================================================================
# AUTHENTICATION
# ============================================================================

# JWT
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRY=24h # Per original PR requirements

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Optional: Cloud Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET=pixelated-cms-storage

# Optional: Sentry
SENTRY_DSN=

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================================
# RATE LIMITING
# ============================================================================

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# SECURITY
# ============================================================================

# HIPAA Compliance
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555

# Encryption
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# ============================================================================
# FEATURE FLAGS
# ============================================================================

FEATURE_COLLABORATION=true
FEATURE_VERSIONING=true
FEATURE_APPROVAL_WORKFLOWS=true
FEATURE_AI_INSIGHTS=false

# ============================================================================
# AUTH0 CONFIGURATION
# ============================================================================
PUBLIC_AUTH0_DOMAIN=dev-f3vkhvb6n52y7fre.us.auth0.com
PUBLIC_AUTH0_CLIENT_ID=SqKS5SumZiRoFEVhjw80gr10KkYbZuLn

# ============================================================================
# ZEP CLOUD CONFIGURATION (Memory & User Management)
# ============================================================================

# Zep Cloud API Key - Required for memory system
ZEP_API_KEY=your-zep-api-key-here

# Zep Cloud API URL (optional - defaults to https://api.getzep.com)
ZEP_API_URL=https://api.getzep.com

# Enable/disable Zep integration
ZEP_ENABLED=true

# Memory Server Configuration
MEMORY_SERVER_PORT=5003
MEMORY_SERVER_HOST=0.0.0.0
MEMORY_CACHE_ENABLED=true
MEMORY_CACHE_TTL_SECONDS=3600

# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================

# MCP Environment
MCP_ENV=development
MCP_HOST=0.0.0.0
MCP_PORT=5001
MCP_DEBUG=false

# MCP Secrets (change in production)
MCP_SECRET_KEY=mcp-dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-dev-secret-key-change-in-production
SHARED_SECRET_KEY=shared-secret-between-services-change-in-production
