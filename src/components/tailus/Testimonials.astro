---
import Container from './Container.astro'
import { softVariant as card } from '@tailus/themer-card'
import { cn } from '@lib/utils'
---

<section class="text-gray-600 dark:text-gray-300 scroll-mt-24" id="reviews">
  <Container>
    <div class="text-center">
      <h2
        class="text-3xl text-gray-950 dark:text-white font-semibold md:text-4xl"
