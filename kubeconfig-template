apiVersion: v1
kind: Config
current-context: default-context
preferences: {}

clusters:
- cluster:
    certificate-authority-data: # Base64 encoded CA certificate
    server: https://your-cluster-endpoint:6443
  name: default-cluster

contexts:
- context:
    cluster: default-cluster
    namespace: default
    user: default-user
  name: default-context

users:
- name: default-user
  user:
    # Authentication method - choose one of the following:
    
    # Option 1: Token-based authentication
    # token: your-service-account-token
    
    # Option 2: Certificate-based authentication
    # client-certificate-data: # Base64 encoded client certificate
    # client-key-data: # Base64 encoded client private key
    
    # Option 3: Username/password authentication
    # username: your-username
    # password: your-password
    
    # Option 4: External authentication (like kubectl exec)
    # exec:
    #   apiVersion: client.authentication.k8s.io/v1beta1
    #   command: kubectl
    #   args:
    #   - oidc-login
    #   - get-token
    #   - --oidc-issuer-url=https://your-oidc-provider
    #   - --oidc-client-id=your-client-id
